<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_item_sort_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_order_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="订单号"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_count_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="件数"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="金额"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_person_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="购买人"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_phone_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="手机号"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="状态"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_create_time_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="创建时间"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/search_item_action_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="操作"
        android:textStyle="normal"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/shape_red_solid_corner5555_rect"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_8" />
</LinearLayout>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/icon_coin"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />
            <TextView
                android:id="@+id/tv_total_gold_up"
                android:text="金币：0"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="（1人民币=1金币）"
                android:textColor="@color/colorShadow"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:id="@+id/ll_value_1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_coin"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="10金币"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_value_1"
                    android:clickable="false"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_value_2"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_coin"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="50金币"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/cb_value_2"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_value_3"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_coin"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="100金币"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/cb_value_3"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_value_4"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_coin"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="200金币"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:clickable="false"
                    android:id="@+id/cb_value_4"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/dp_15"
                android:layout_marginLeft="-5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_coin"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <EditText
                    android:id="@+id/et_input_value"
                    android:hint="输入其他金额"
                    android:inputType="number"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_exactly_value"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:text="实付："
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="0.0"
                android:id="@+id/tv_total_gold_down"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechat"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_wechat"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="微信支付"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<TextView-->
                    <!--android:text="充值"-->
                    <!--android:textColor="@color/colorShadow"-->
                    <!--android:textSize="@dimen/text_size_small"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            </LinearLayout>
            <CheckBox
                android:id="@+id/cb_wechat"
                android:clickable="false"
                style="@style/DefaultCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_alipay"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_alipay"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="支付宝支付"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<TextView-->
                    <!--android:text="充值"-->
                    <!--android:textColor="@color/colorShadow"-->
                    <!--android:textSize="@dimen/text_size_small"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            </LinearLayout>
            <CheckBox
                android:id="@+id/cb_alipay"
                android:clickable="false"
                style="@style/DefaultCheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_12"
        android:paddingTop="@dimen/margin_12"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_game_gift_logothumb"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_9"
            android:background="@mipmap/guide1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_game_gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="大话西游大礼包"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余："
                    android:textColor="@color/color_999"
                    android:layout_marginRight="@dimen/margin_5"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_game_gift_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="@color/color_00aeff"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_game_gift_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升星材料箱x5，紫霞神功页x5，玫瑰花x1"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/tv_game_gift_gain"
            android:layout_width="@dimen/view_59"
            android:layout_height="@dimen/view_29"
            android:layout_marginRight="@dimen/margin_21"
            android:background="@mipmap/youxi_btn_lq" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdd" />

</LinearLayout>
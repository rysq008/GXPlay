<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v_list_interval"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/colorBackground"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_10"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:id="@+id/root_item"
        android:layout_height="@dimen/mine_list_item_size"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="@dimen/mine_list_item_icon"
            android:layout_height="@dimen/mine_list_item_icon" />
        <TextView
            android:text="我的设置"
            android:textColor="@color/colorBlack"
            android:id="@+id/tv_name"
            android:textSize="@dimen/text_size_large"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"/>
</LinearLayout>
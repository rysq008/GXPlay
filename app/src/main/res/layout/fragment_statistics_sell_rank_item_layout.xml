<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_20"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/statis_sell_rank_item_id_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="排名" />

    <TextView
        android:id="@+id/statis_sell_rank_item_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="品名" />

    <TextView
        android:id="@+id/statis_sell_rank_item_barcode_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="条码" />

    <TextView
        android:id="@+id/statis_sell_rank_item_sales_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="销售量" />

    <TextView
        android:id="@+id/statis_sell_rank_item_amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="销售额" />
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.game.helper.fragments.SettingUserFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_avatar"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="头像"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <com.game.helper.views.HeadImageView
                    android:id="@+id/hv_avatar"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nickname"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="昵称"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_nickname"
                    android:text="小李子"
                    android:gravity="right"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="绑定手机号"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:text="12345678999"
                    android:gravity="right"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="性别"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_sex"
                    android:text="男"
                    android:gravity="right"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_birthday"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="生日"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="1988-01-01"
                    android:gravity="right"
                    android:id="@+id/tv_birthday"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="个人签名"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/ic_flag_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_medium"
                    android:text="安全管理"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_safe_pw"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="登陆密码"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="修改"
                    android:gravity="right"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_safe_orderpw"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="交易密码"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="未设置"
                    android:id="@+id/tv_safe_orderpw_status"
                    android:gravity="right"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_safe_alipay"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="设置支付宝账号"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_large"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

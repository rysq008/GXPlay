<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/rv_item_hot"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="@dimen/dp_10">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/hot_item_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/debug_game_icon" />

        <jp.shts.android.library.TriangleLabelView
            android:id="@+id/tlv__discount_item_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundColor="#ff0000"
            app:corner="leftTop"
            app:labelBottomPadding="3dp"
            app:labelCenterPadding="0dp"
            app:labelTopPadding="8dp"
            app:primaryText="4.5折"
            app:primaryTextColor="@color/white"
            app:primaryTextSize="@dimen/size_9sp" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/hot_item_tv_name"
        android:layout_width="@dimen/dp_70"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="神龙游戏神龙游戏"
        android:textColor="@color/app_color" />
</LinearLayout>
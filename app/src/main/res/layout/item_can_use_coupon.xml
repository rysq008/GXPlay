<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f1f6"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rootRl"
        android:background="@drawable/bg_can_use_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/redPackName"
        android:layout_marginLeft="@dimen/dp_30"
        tools:text="全场通用券"
        android:textSize="@dimen/size_16sp"
        android:textColor="#333"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/redPackName"
        android:id="@+id/redPackDesc"
        android:layout_marginLeft="@dimen/dp_30"
        tools:text="购满300元可使用"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="25dp"
        android:layout_below="@+id/redPackDesc"
        android:id="@+id/timeLimit"
        android:layout_marginLeft="@dimen/dp_30"
        tools:text="1017-11-11"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/coinIv"
        android:src="@drawable/icon_redpack_coin"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/redpackNum"
        android:layout_below="@+id/coinIv"
        android:layout_marginTop="@dimen/dp_5"
        tools:text="10元现金券"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:layout_below="@+id/rootRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="选择可用游戏"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/colorBlack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/icon_arrow_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/game_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorWhite"/>
</RelativeLayout>
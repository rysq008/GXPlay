<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f1f6"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_2"
    android:paddingRight="@dimen/dp_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_can_use_coupon"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rootRl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/redPackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333"
                android:textSize="@dimen/size_16sp"
                tools:text="全场通用券" />

            <TextView
                android:id="@+id/redPackDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/color_666"
                android:textSize="@dimen/size_12sp"
                tools:text="购满300元可使用" />

            <TextView
                android:id="@+id/timeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size_12sp"
                tools:text="1017-11-11" />

            <TextView
                android:id="@+id/userule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/color_999"
                android:textSize="@dimen/size_12sp"
                tools:text="红包使用规则红包使用规则" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_can_use_coupon_to_recharge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coinIv"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:src="@drawable/icon_redpack_coin" />


            <TextView
                android:id="@+id/redpackNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/text_size_tiny"
                tools:text="10.00元现金券" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/ll_has_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指定游戏"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_tiny" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorWhite" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@drawable/shape_white_solid_corner10101010_rect"    android:gravity="center_horizontal"    android:orientation="vertical">    <TextView        android:id="@+id/dialog_title_tv"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="选择找回密码的方式"        android:layout_marginTop="@dimen/dp_31"        android:textColor="@color/C_333333"        android:textSize="@dimen/dp_16" />    <Button        android:id="@+id/dialog_ok_btn"        android:layout_width="@dimen/dp_120"        android:layout_height="@dimen/dp_40"        android:layout_marginTop="@dimen/dp_50"        android:layout_marginBottom="@dimen/dp_82"        android:background="@drawable/shape_orange_solid_6_radius_rect"        android:text="验证码找回"        android:textColor="@android:color/white"        android:textSize="@dimen/dp_14" /></LinearLayout>
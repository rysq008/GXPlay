<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <TextView
                    android:text="可提现金额(元)"
                    android:layout_above="@+id/tv_value"
                    android:textSize="@dimen/text_size_small"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_value"
                    android:text="0.00"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/ll_help"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="提现规则"
                        android:textSize="@dimen/text_size_tiny"
                        android:textColor="@color/colorWhite"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@mipmap/ic_help"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10" />
                </LinearLayout>

                <TextView
                    android:text="1金币=1元"
                    android:textSize="@dimen/text_size_tiny"
                    android:textColor="@color/colorWhite"
                    android:layout_below="@+id/tv_value"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="充值账户余额(元)"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_balance_left"
                        android:textSize="@dimen/text_size_xlarge"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/red"
                        android:text="0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/tabbar_divider_height"
                    android:layout_height="@dimen/dp_30"
                    android:background="@color/colorDivider"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="推广账户余额(元)"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_balance_right"
                        android:textSize="@dimen/text_size_xlarge"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColor="@color/red"
                        android:text="0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="启用充值账户余额"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <com.game.helper.views.widget.ToggleButton
                    android:id="@+id/tb_recharge_toggle"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="@dimen/dp_5" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_flag_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_medium"
                    android:text="收款方式"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_alipay"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="支付宝"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cb_alipay"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_account"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="提现账户"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cash"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:hint="请输入提现账户"
                    android:background="@null"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_account"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="账户名称"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_cash_to"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/colorBlack"
                    android:hint="请输入账户名称"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_coin_blue"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="提现金额"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_cash_value"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:hint="请输入大于100的金额"
                    android:textColor="@color/colorBlack"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <TextView
                android:background="@color/colorWhite"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorShadow"
                android:padding="@dimen/dp_10"
                android:text="@string/common_cash_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_cash_apply"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:text="提交"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/text_size_xlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

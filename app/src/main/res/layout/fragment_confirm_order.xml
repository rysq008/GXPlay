<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--相关信息-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_game"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="游戏："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="0.00"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/tabbar_divider_height"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_account"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="账号："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="admin"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/tabbar_divider_height"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_coin_blue"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="金额："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="0.00"
                        android:textColor="@color/red"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/tabbar_divider_height"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_redpacket"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="可使用红包："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="-0.00"
                        android:textColor="@color/red"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/tabbar_divider_height"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_exactly_value"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="实付："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="0.00"
                        android:textColor="@color/red"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/tabbar_divider_height"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/ic_platform"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15" />
                    <TextView
                        android:text="客户端："
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="乐友端"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <!--相关信息 end-->

            <!--账户余额-->
            <LinearLayout
                android:padding="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/ic_flag_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_medium"
                    android:text="安全管理"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small"
                        android:text="充值账户余额："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="0.00"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="元"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small"
                        android:text="推广账户余额："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="0.00"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="元"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_size_small"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <com.game.helper.views.widget.ToggleButton
                        android:id="@+id/tb_order_toggle"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="@dimen/dp_5" />
                </LinearLayout>
            </LinearLayout>
            <!--账户余额 end-->

            <!--可用金币-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_coin_blue"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="可用金币："
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="0.00"
                    android:textColor="@color/red"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>
            <!--账户余额 end-->

            <!--支付方式-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_wechat"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="微信支付"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:background="@color/colorWhite"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_alipay"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15" />
                <TextView
                    android:text="支付宝支付"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <CheckBox
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="还需支付金额："
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="0.00"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="元"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--支付方式 end-->
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorDivider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel_order"
            android:background="@color/colorWhite"
            android:textColor="@color/colorShadow"
            android:text="取消"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_confirm_order"
            android:textSize="@dimen/text_size_medium"
            android:text="确认"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

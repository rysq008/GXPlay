<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12">

        <ImageView
            android:id="@+id/iv_channel_list_logothumb"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_9"
            android:background="@mipmap/guide1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_channel_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="大话西游"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_channel_list_discount_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/wz_bg"
                    android:gravity="center"
                    android:text="5折"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_channel_list_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="策略游戏"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@color/color_999" />

                <TextView
                    android:id="@+id/tv_channel_list_package_filesize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="221M"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏提供:"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />
                <TextView
                    android:id="@+id/tv_channel_list_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果盘端"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>
            <!--点击下载后关闭游戏提供,显示下载进度条-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:id="@+id/pb_channel_list"
                    android:layout_width="wrap_content"
                    android:layout_height="7dp"
                    android:visibility="visible"
                    android:progress="50"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_channel_list_load"
            android:layout_width="@dimen/view_59"
            android:layout_height="@dimen/view_29"
            android:layout_marginRight="@dimen/margin_21"
            android:background="@mipmap/middle_az" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdd"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_channel_list_logothumb"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_9"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_channel_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:maxLength="10"
                    android:ellipsize="end"
                    android:text="大话西游"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/tv_channel_list_discount_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/wz_bg"
                    android:gravity="center"
                    android:text="5折"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/margin_5"
                    android:textSize="@dimen/size_14sp" />
                <TextView
                    android:id="@+id/tv_channel_list_activity_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    android:background="@drawable/shape_bg_activity_discount"
                    android:gravity="center"
                    android:text="0折"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_12sp"
                    android:layout_marginRight="@dimen/margin_5"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_channel_list_matching_activity_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0折"
                    android:textColor="@color/color_cecece"
                    android:textSize="@dimen/size_12sp"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_channel_list_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="策略游戏"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@color/color_999" />

                <TextView
                    android:id="@+id/tv_channel_list_package_filesize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="221M"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@color/color_999" />

                <TextView
                    android:id="@+id/tv_channel_list_package_plat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果盘"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏提供:"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

                <TextView
                    android:id="@+id/tv_channel_list_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="果盘端"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />
            </LinearLayout>
            <!--点击下载后关闭游戏提供,显示下载进度条-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="50%"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/size_12sp" />

                <ProgressBar
                    android:id="@+id/pb_channel_list"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_below="@id/percent"
                    android:layout_marginBottom="@dimen/margin_3"
                    android:layout_marginTop="@dimen/margin_3"
                    android:progress="0"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pb_channel_list"
                    android:layout_gravity="start"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    tools:text="正在下载中" />

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/pb_channel_list"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="0.0M/0.0M"
                    android:textSize="11sp" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_channel_list_load"
            android:layout_width="@dimen/view_59"
            android:layout_height="@dimen/view_29"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/bg_game_list_item_download" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdd" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_special_more_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_height"
        android:background="@mipmap/guide1"
        android:layout_marginBottom="@dimen/margin_15"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_marginLeft="@dimen/margin_10"
        android:id="@+id/item_special_more_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/zt_zhuangs"
        android:text="变态游戏专区"
        android:textColor="@color/color_333"
        android:drawablePadding="@dimen/margin_10"
        android:textSize="@dimen/size_18sp"/>
    <TextView
        android:id="@+id/item_special_more_content_tv"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容详情"
        android:textColor="@color/color_666"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginBottom="@dimen/dp_10"/>

</LinearLayout>
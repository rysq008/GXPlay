<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/tabbar_divider_height"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@mipmap/ic_home_notice" />

        <ViewFlipper
            android:id="@+id/activity_notice_item_vflipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_notice_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium" />
        </ViewFlipper>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tabbar_divider_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/notice_vip_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/home_notice_icon_height"
                android:layout_height="@dimen/home_notice_icon_height"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notice_view_vip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="VIP通道"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notice_rechange_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/home_notice_icon_height"
                android:layout_height="@dimen/home_notice_icon_height"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notice_view_recharge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="快速充值"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notice_new_hand_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_14"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/home_notice_icon_height"
                android:layout_height="@dimen/home_notice_icon_height"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notice_view_new_hand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="新手必读"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
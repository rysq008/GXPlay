        <!-- <RelativeLayout
             android:id="@+id/game_detail_bottom_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:background="@color/colorWhite">






             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/tabbar_divider_height"
                 android:background="@color/colorDivider" />
         </RelativeLayout>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_game_detail_action_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_stroke_radius">
        </LinearLayout>-->
        <EditText
            android:id="@+id/et_game_detail_edit_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/bg_grey_stroke_radius"
            android:hint="说点什么吧"
            android:paddingLeft="@dimen/margin_10"
            android:textColorHint="@color/colorShadow"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/tv_game_detail_edit_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_5"
            android:text="发送"
            android:textColorHint="@color/colorBlack"
            android:textSize="@dimen/text_size_xlarge" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_game_detail_bottom_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_50"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="立即下载"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_xlarge"
        android:visibility="gone" />


</FrameLayout>

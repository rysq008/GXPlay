<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <include
            android:id="@+id/action_bar"
            layout="@layout/common_action_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_12"
            android:paddingTop="@dimen/margin_12"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_game_detail_logothumb"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_9"
                android:background="@mipmap/guide1"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_5"
                        android:text="大话西游"
                        android:textColor="@color/color_333"
                        android:textSize="@dimen/size_14sp" />

                    <TextView
                        android:id="@+id/tv_game_detail_discount_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/wz_bg"
                        android:gravity="center"
                        android:text="5折"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_detail_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="策略游戏"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/size_12sp" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@color/color_999" />

                    <TextView
                        android:id="@+id/tv_game_detail_package_filesize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="221M"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/size_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_detail_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游戏详情描述游戏详情描述游戏详情描述"
                        android:textColor="@color/color_999"
                        android:textSize="@dimen/size_12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_game_detail_load"
                android:layout_width="@dimen/view_59"
                android:layout_height="@dimen/view_29"
                android:layout_marginRight="@dimen/margin_21"
                android:background="@mipmap/middle_az" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorDivider" />
        <!--折扣-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_extension_list_item_2_sharediscount" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:text="@string/common_discount_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_43">

                    <TextView
                        android:id="@+id/tv_discount_game_detail_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/common_discount_putong"
                        android:textColor="@color/color_00aeff"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/tv_discount_game_detail_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/common_discount_member"
                        android:textColor="@color/color_00aeff"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/game_detail_tabs"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/game_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:recyclerBackgroundColor="#f5f5f5"
                app:recyclerScrollbarNone="true"
                app:recyclerScrollbarStyle="outsideOverlay" />
        </LinearLayout>

        <!--<include layout="@layout/layout_game_detail_dicount" />-->


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/backstage_goods_search_item_index_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        tools:text="序号" />

    <TextView
        android:id="@+id/backstage_goods_search_item_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="商品名称" />

    <TextView
        android:id="@+id/backstage_goods_search_item_barcode_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="商品条码" />

    <TextView
        android:id="@+id/backstage_goods_search_item_code_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="商品编码" />

    <TextView
        android:id="@+id/backstage_goods_search_item_unit_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="单位" />

    <TextView
        android:id="@+id/backstage_goods_search_item_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="售价" />

    <TextView
        android:id="@+id/backstage_goods_search_item_place_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="原产国" />

    <TextView
        android:id="@+id/backstage_goods_search_item_brand_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="品牌" />

    <TextView
        android:id="@+id/backstage_goods_search_item_spec_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="规格" />

    <TextView
        android:id="@+id/backstage_goods_search_item_rough_weight_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="毛重" />

    <TextView
        android:id="@+id/backstage_goods_search_item_net_weight_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="净重" />
</LinearLayout>


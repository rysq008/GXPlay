<?xml version="1.0" encoding="utf-8"?>
<cn.droidlover.xstatecontroller.XStateController xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.game.helper.views.SearchComponentView
            android:id="@+id/common_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/game_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/game_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:recyclerBackgroundColor="#f5f5f5"
            app:recyclerScrollbarNone="true"
            app:recyclerScrollbarStyle="outsideOverlay" />
    </LinearLayout>
</cn.droidlover.xstatecontroller.XStateController>

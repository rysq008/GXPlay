<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tittle"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_alignTop="@+id/tv_tittle"
        android:layout_alignParentBottom="@+id/tv_tittle"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_message"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="3.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:text="2018-01-01 19：00"
        android:layout_below="@+id/tv_tittle"
        android:layout_margin="@dimen/dp_10"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/colorShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.game.helper.views.XReloadableStateContorller xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.game.helper.views.XReloadableRecyclerContentLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerBackgroundColor="#f5f5f5"
            app:recyclerScrollbarNone="true"
            app:recyclerScrollbarStyle="outsideOverlay" />

        <com.game.helper.views.SearchComponentView
            android:id="@+id/common_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:center_et_bg="@drawable/bg_gradient_radius_hoop_translucent"
            app:center_et_res="请输入游戏名称"
            app:layout_back_ground="@color/color_transparent"
            app:right_tv_res_img="@mipmap/icon_download" />
    </RelativeLayout>
</com.game.helper.views.XReloadableStateContorller>

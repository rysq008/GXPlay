<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:padding="1dp"
            android:id="@+id/iv_avatar_game_communication"
            android:src="@mipmap/debug_mine_avatar"
            android:layout_width="@dimen/game_detail_fragment_icon_avatar"
            android:layout_height="@dimen/game_detail_fragment_icon_avatar" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="大话西游"
                android:id="@+id/tv_member_name_game_communication"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_content_game_communication"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time_game_communication"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/colorShadow"
                android:text="2017.11.11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorDivider"/>
</LinearLayout>
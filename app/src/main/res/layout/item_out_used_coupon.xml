<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f1f6"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rootRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_out_use_coupon">

        <TextView
            android:id="@+id/redPackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="25dp"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            tools:text="全场通用券" />

        <TextView
            android:id="@+id/redPackDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redPackName"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#666"
            android:textSize="14sp"
            tools:text="购满300元可使用" />

        <TextView
            android:id="@+id/timeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redPackDesc"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#666"
            android:textSize="14sp"
            tools:text="1017-11-11" />

        <TextView
            android:id="@+id/userule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeLimit"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#666"
            android:textSize="14sp"
            tools:text="红包使用规则" />

        <ImageView
            android:id="@+id/coinIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_redpack_coin_enable" />


        <TextView
            android:id="@+id/redpackNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/coinIv"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/text_size_tiny"
            tools:text="10元现金券" />

    </RelativeLayout>
</RelativeLayout>
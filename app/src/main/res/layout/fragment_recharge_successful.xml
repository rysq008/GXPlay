<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_bar_back"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:gravity="center"
            android:padding="@dimen/dp_15">

            <ImageView
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_back_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/action_bar_tittle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="充值成功"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_xlarge" />

        <RelativeLayout
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/rl_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height">
            <TextView
                android:text="完成"
                android:visibility="visible"
                android:id="@+id/tv_action"
                android:padding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:textColor="@color/colorShadow"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_height" />
        </RelativeLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_divider_height"
            android:background="@color/colorDivider"
            android:layout_alignParentBottom="true"/>-->

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_recharge_succ"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_alignBottom="@+id/iv_img"
        android:text="0.00 元"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/iv_img"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorShadow"
        android:text="本次充值"
        android:visibility="gone"
        android:textSize="@dimen/text_size_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_left_balance"
        android:layout_below="@+id/iv_img"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/icon_coin"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/tv_type"
            android:textSize="@dimen/text_size_small"
            android:text="本次充值"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_balance1"
            android:text="￥0.00"
            android:gravity="right|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>

    <View
        android:layout_below="@+id/ll_left_balance"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorDivider"/>
    <TextView
        android:id="@+id/tv_hint"
        android:text="@string/recharge_succ_hint"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/ll_left_balance"
        android:textSize="@dimen/text_size_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

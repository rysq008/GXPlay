<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f6"
    tools:context="com.game.helper.activitys.RankingListActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>

    <LinearLayout
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_37"
        android:paddingRight="@dimen/dp_37"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white">

        <!--<ImageView-->
            <!--android:id="@+id/superStarIv"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@mipmap/bg_mingxing_select"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"/>-->
        <ImageView
            android:id="@+id/renmaiIv"
            android:layout_weight="1"
            android:background="@mipmap/bg_renmai_select"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <ImageView
            android:id="@+id/incomeIv"
            android:layout_weight="1"
            android:background="@mipmap/bg_income_unselect"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/vp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <!--账号-->
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:id="@+id/ll_account"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="账号："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_account"
            android:text=""
            android:hint="请选择游戏账号"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--游戏-->
    <LinearLayout
        android:id="@+id/ll_game"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="游戏："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:hint="请选择游戏"
            android:id="@+id/tv_game"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--平台-->
    <LinearLayout
        android:id="@+id/ll_platfrom"
        android:layout_marginTop="@dimen/tabbar_divider_height"
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="平台："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:hint="请选择平台"
            android:id="@+id/tv_platfrom"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--金额-->
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:id="@+id/ll_balance"
        android:layout_marginTop="@dimen/tabbar_divider_height"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="金额："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:hint="请输入充值金额"
            android:id="@+id/et_balance"
            android:maxLength="6"
            android:inputType="number"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--折扣-->
    <LinearLayout
        android:id="@+id/ll_discount_1"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_15"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="首充享受皇冠会员"
            android:id="@+id/tv_discount_1"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_discount_1"
            style="@style/DefaultCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_discount_2"
        android:padding="@dimen/dp_15"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="普通会员"
            android:id="@+id/tv_discount_2"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_discount_2"
            style="@style/DefaultCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:id="@+id/ll_discount_3"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="VIP会员"
                    android:id="@+id/tv_discount_3"
                    android:textColor="@color/colorBlack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:text="可用vip账号剩余0个"
                android:id="@+id/tv_discount_hint_3"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <CheckBox
            android:clickable="false"
            android:id="@+id/cb_discount_3"
            style="@style/DefaultCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--付款信息-->
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="折扣："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0.0折"
            android:id="@+id/tv_total_discount"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/dp_15"
        android:gravity="center"
        android:layout_marginTop="@dimen/tabbar_divider_height"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="实付："
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0.00元"
            android:id="@+id/tv_total_balance"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

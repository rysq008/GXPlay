<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical"
            tools:context="com.game.helper.fragments.recharge.RechargeFragment">


            <!--账号-->
            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择游戏账号"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <!--游戏-->
            <LinearLayout
                android:id="@+id/ll_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_game"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择游戏"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
            <!--平台-->
            <LinearLayout
                android:id="@+id/ll_platfrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_platfrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择平台"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
            <!--金额-->
            <LinearLayout
                android:id="@+id/ll_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/et_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入充值金额"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <!--折扣-->
            <LinearLayout
                android:id="@+id/ll_discount_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_discount_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="首充享受皇冠会员"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/cb_discount_1"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_discount_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="普通会员"
                    android:textColor="@color/colorBlack" />

                <CheckBox
                    android:id="@+id/cb_discount_2"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_discount_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_discount_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VIP会员"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_discount_hint_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tabbar_divider_height"
                        android:text="可用vip账号剩余0个"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_tiny" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_discount_3"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false" />
            </LinearLayout>

            <!--付款信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折扣："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_total_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.0折"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付："
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_total_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00元"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_game_detail_increase_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>
        </LinearLayout>
        <!--联系客服和充值功能用于游戏详情-->
        <LinearLayout
            android:id="@+id/ll_game_detail_kefu_and_recharge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_game_detail_connect_kefu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@mipmap/ic_kefu"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:padding="@dimen/dp_15"
                    android:text="联系客服"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_game_detail_confirm_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="充值"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.helper.activitys.OrderConfirmActivity">


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#999"
            android:textSize="@dimen/size_18sp" />

        <TextView
            android:id="@+id/suretv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00aeff"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/size_18sp" />
    </LinearLayout>

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@+id/action_bar"
        android:scrollbars="none">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f0f6"
            android:orientation="vertical">

            <!--游戏-->
            <LinearLayout
                android:id="@+id/gameLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_game"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="游戏"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/gameName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#666"
                        android:textSize="@dimen/size_15sp"
                        tools:text="大话西游" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />
            <!--账号-->
            <LinearLayout
                android:id="@+id/accountLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_account"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="账号"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/accountName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#666"
                        android:textSize="@dimen/size_15sp"
                        tools:text="Simons" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />
            <!--金额-->
            <LinearLayout
                android:id="@+id/moneyLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_money"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="金额"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/moneyNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#fe4430"
                        android:textSize="@dimen/size_15sp"
                        tools:text="100.00" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />
            <!--可使用红包-->
            <LinearLayout
                android:id="@+id/redPackLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_redpack"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="可使用红包"
                        android:textColor="#333333"
                        android:textSize="@dimen/size_16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:id="@+id/redPackNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#fe4430"
                            android:textSize="@dimen/size_15sp"
                            tools:text="-60" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/redPackNum"
                            android:padding="@dimen/dp_10"
                            android:src="@mipmap/icon_arrow_gray" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />
            <!--实付-->
            <LinearLayout
                android:id="@+id/realPayLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_real_pay"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="实付"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/realPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#fe4430"
                        android:textSize="@dimen/size_15sp"
                        tools:text="100.00" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />
            <!--客户端-->
            <LinearLayout
                android:id="@+id/ChannelLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/icon_app"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="平台"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/channelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textColor="#666"
                        android:textSize="@dimen/size_15sp"
                        tools:text="乐友端" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />


            <!--选择付款方式-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:drawableLeft="@mipmap/ic_flag_round"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="选择付款方式"
                android:textColor="#333"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_15">

                <LinearLayout
                    android:id="@+id/chargeAccountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chargeAccountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="充值账户余额："
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/chargeAccountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fe4430"
                        android:textSize="@dimen/size_16sp"
                        tools:text="11.2500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chargeAccountLayout"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/pushAccountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="推广账户余额："
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <TextView
                        android:id="@+id/pushAccountTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pushAccountText"
                        android:textColor="#fe4430"
                        android:textSize="@dimen/size_16sp"
                        tools:text="11.254444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pushAccountTv"
                        android:text="元"
                        android:textColor="#333"
                        android:textSize="@dimen/size_16sp" />

                    <ToggleButton
                        android:id="@+id/toggleBtn"
                        android:layout_width="50dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/bg_toggle_btn"
                        android:checked="true"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableLeft="@mipmap/icon_money"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="可用金币："
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:id="@+id/availableCoinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fe4430"
                    android:textSize="@dimen/size_16sp"
                    tools:text="61.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="元"
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

                <CheckBox
                    android:id="@+id/usefulCoin"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:checked="true"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_wx_pay"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="微信支付"
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

                <CheckBox
                    android:id="@+id/wxPayCb"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_ali_pay"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="支付宝支付"
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

                <CheckBox
                    android:id="@+id/aliPayCb"
                    style="@style/DefaultCheckBoxStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="#dfdfdd" />

            <!--还需支付-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="还需支付金额："
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:id="@+id/needPayTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fe4430"
                    android:textSize="@dimen/size_16sp"
                    tools:text="9.00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="元"
                    android:textColor="#333"
                    android:textSize="@dimen/size_16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

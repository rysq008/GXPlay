<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.helper.activitys.OrderConfirmActivity">


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/cancelTv"
            android:gravity="center"
            android:textSize="@dimen/size_18sp"
            android:textColor="#999"
            android:text="取消"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/suretv"
            android:gravity="center"
            android:textSize="@dimen/size_18sp"
            android:textColor="@color/white"
            android:text="确定"
            android:background="#00aeff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>
    <ScrollView
        android:layout_below="@+id/action_bar"
        android:layout_above="@+id/bottomLayout"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f1f0f6">

    <!--游戏-->
    <LinearLayout
        android:id="@+id/gameLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_game"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="游戏"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"/>

        <TextView
            android:id="@+id/gameName"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="大话西游"
            android:textColor="#666"
            android:textSize="@dimen/size_15sp"/>

    </LinearLayout>


    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>
    <!--账号-->
    <LinearLayout
        android:id="@+id/accountLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_account"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="账号"
                android:textColor="#333"
                android:textSize="@dimen/size_16sp"/>

            <TextView
                android:id="@+id/accountName"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="Simons"
                android:textColor="#666"
                android:textSize="@dimen/size_15sp"/>

        </LinearLayout>

    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>
    <!--金额-->
    <LinearLayout
        android:id="@+id/moneyLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_money"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="金额"
                android:textColor="#333"
                android:textSize="@dimen/size_16sp"/>

            <TextView
                android:id="@+id/moneyNum"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="100.00"
                android:textColor="#fe4430"
                android:textSize="@dimen/size_15sp"/>

        </LinearLayout>

    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>
    <!--可使用红包-->
    <LinearLayout
        android:id="@+id/redPackLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/icon_redpack"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="可使用红包"
                android:textColor="#333333"
                android:textSize="@dimen/size_16sp"/>

            <RelativeLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/redPackNum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="-60"
                android:textColor="#fe4430"
                android:textSize="@dimen/size_15sp"/>

                <ImageView
                    android:layout_toRightOf="@+id/redPackNum"
                    android:padding="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_arrow_gray"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>
    <!--实付-->
    <LinearLayout
        android:id="@+id/realPayLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_real_pay"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="实付"
                android:textColor="#333"
                android:textSize="@dimen/size_16sp"/>

            <TextView
                android:id="@+id/realPay"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="100.00"
                android:textColor="#fe4430"
                android:textSize="@dimen/size_15sp"/>

        </LinearLayout>

    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>
    <!--客户端-->
    <LinearLayout
        android:id="@+id/ChannelLayout"
        android:orientation="vertical"
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_app"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="客户端"
                android:textColor="#333"
                android:textSize="@dimen/size_16sp"/>

            <TextView
                android:id="@+id/channelName"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                tools:text="乐友端"
                android:textColor="#666"
                android:textSize="@dimen/size_15sp"/>

        </LinearLayout>

    </LinearLayout>
            <View
                android:background="#dfdfdd"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="match_parent"/>


    <!--选择付款方式-->
    <TextView
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@mipmap/ic_flag_round"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="选择付款方式"
        android:layout_height="35dp"
        android:layout_width="match_parent"/>

    <View
        android:background="#dfdfdd"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:paddingTop="@dimen/dp_15"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/chargeAccountText"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:text="充值账户余额："
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_toRightOf="@+id/chargeAccountText"
            android:id="@+id/chargeAccountTv"
            tools:text="11.2500"
            android:textColor="#fe4430"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:id="@+id/pushAccountText"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/chargeAccountText"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:text="推广账户余额："
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/chargeAccountTv"
            android:layout_toRightOf="@+id/pushAccountText"
            android:id="@+id/pushAccountTv"
            tools:text="11.254444"
            android:textColor="#fe4430"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

            <ToggleButton
                android:textOn=""
                android:textOff=""
                android:checked="true"
                android:background="@drawable/bg_toggle_btn"
                android:id="@+id/toggleBtn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignBaseline="@+id/pushAccountTv"
                android:layout_height="@dimen/dp_30"
                android:layout_width="50dp"/>
            </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_height="45dp"
        android:layout_width="match_parent">

        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_money"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="可用金币："
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_weight="1"
            tools:text="61.00元"
            android:textColor="#fe4430"
            android:textSize="@dimen/size_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:checked="true"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/usefulCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_wx_pay"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="微信支付"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <CheckBox
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/wxPayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#dfdfdd"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:drawableLeft="@mipmap/icon_ali_pay"
            android:drawablePadding="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="支付宝支付"
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <CheckBox
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/aliPayCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#dfdfdd"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"/>

    <!--还需支付-->
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="还需支付金额："
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:textColor="#fe4430"
            android:textSize="@dimen/size_16sp"
            android:id="@+id/needPayTv"
            tools:text="9.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#333"
            android:textSize="@dimen/size_16sp"
            android:text="元"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>

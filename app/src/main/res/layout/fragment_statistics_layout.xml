<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statis_start_time_tv"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/shape_grey_stroke_6_radius_rect"
        android:drawableRight="@mipmap/search"
        android:gravity="center"
        android:hint="选择开始时间"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_end_time_tv"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/shape_grey_stroke_6_radius_rect"
        android:drawableRight="@mipmap/search"
        android:gravity="center"
        android:hint="选择结束时间"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statis_start_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_today_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:hint="今天"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statis_end_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_near_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:hint="最近"
        app:layout_constraintStart_toEndOf="@+id/statis_today_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_week_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:hint="7天"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statis_near_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_month_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:hint="1个月"
        app:layout_constraintStart_toEndOf="@+id/statis_week_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_seasons_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:hint="3个月"
        app:layout_constraintStart_toEndOf="@+id/statis_month_time_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statis_sell_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="销售笔数"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/statis_start_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/statis_start_time_tv" />

    <TextView
        android:id="@+id/statis_sell_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:text="销售金额"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/statis_sell_count_tv"
        app:layout_constraintTop_toTopOf="@+id/statis_sell_count_tv" />

    <TextView
        android:id="@+id/statis_sell_count_val_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="12"
        android:textColor="@color/c_F4785F"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/statis_sell_count_tv"
        app:layout_constraintStart_toStartOf="@+id/statis_sell_count_tv"
        app:layout_constraintTop_toBottomOf="@+id/statis_sell_count_tv" />

    <TextView
        android:id="@+id/statis_sell_amount_val_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="3000"
        android:textColor="@color/c_F4785F"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/statis_sell_amount_tv"
        app:layout_constraintStart_toStartOf="@+id/statis_sell_amount_tv"
        app:layout_constraintTop_toBottomOf="@+id/statis_sell_amount_tv" />

    <TextView
        android:id="@+id/statis_sell_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="商品销售排行"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_15"
        app:layout_constraintStart_toStartOf="@+id/statis_sell_count_tv"
        app:layout_constraintTop_toBottomOf="@+id/statis_sell_count_val_tv" />

    <LinearLayout
        android:id="@+id/statis_sell_col_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/statis_sell_sort_tv">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="排名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="品名" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="条码" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销售量" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销售额" />
    </LinearLayout>

    <com.ikats.shop.views.XReloadableListContentLayout
        android:id="@+id/statis_reload_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@+id/statis_sell_col_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>

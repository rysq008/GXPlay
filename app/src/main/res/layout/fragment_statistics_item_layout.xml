<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="排名"
        android:id="@+id/statis_item_sort_tv"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/statis_item_goods_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="品名"
        android:textColor="@color/c_F4785F"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:id="@+id/statis_item_code_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="条码"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/statis_item_sell_tv"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="销售量"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/statis_item_amount_tv"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="销售额"
        android:layout_margin="@dimen/dp_8"
        android:textColor="@color/C_333333"
        android:textSize="@dimen/dp_8" />
</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.game.helper.fragments.login.RegistFragment">
    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/action_bar"
        android:padding="@dimen/dp_10"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/login_ic_phone"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <com.game.helper.views.EditInputView
                android:id="@+id/et_account"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:eiv_hint="输入账号"
                app:eiv_type="type_account"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_divider_height"
            android:background="@color/colorDivider"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/login_ic_code"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <com.game.helper.views.EditInputView
                    android:id="@+id/et_verity"
                    app:eiv_hint="输入验证码"
                    app:eiv_type="type_code"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <com.game.helper.views.widget.CountDownText
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_left_time"
                    android:text="获取验证码"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_divider_height"
            android:background="@color/colorDivider"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/login_ic_secret"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <com.game.helper.views.EditInputView
                android:id="@+id/et_password"
                app:eiv_type="type_password"
                app:eiv_hint="输入密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_5"

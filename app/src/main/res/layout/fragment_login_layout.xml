<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F0F9FF"
        android:paddingBottom="@dimen/dp_87">

        <include
            android:id="@+id/common_title_bar"
            layout="@layout/app_common_titlebar"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/login_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_gradient_line_180_green2blue_rect"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/common_title_bar"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1" />
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_launcher_round"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_banner_iv"
            app:layout_constraintVertical_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/login_body_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_2"
            app:contentPadding="@dimen/dp_50"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/login_banner_iv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欢迎使用"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_50"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WELCOME TO USE THIS PRODUCT"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/dp_20" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_80"
                    android:background="@drawable/shape_grey_stroke_6_radius_rect"
                    android:padding="@dimen/dp_12">

                    <EditText
                        android:id="@+id/login_username_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/login_user_clear_iv"
                        android:background="@color/color_transparent"
                        android:drawableLeft="@drawable/amap_bus"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:hint="请输入手机号"
                        android:paddingLeft="@dimen/dp_15"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/login_user_clear_iv"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/login_user_clear"
                        android:visibility="invisible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginTop="@dimen/dp_50"
                    android:background="@drawable/shape_grey_stroke_6_radius_rect"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <EditText
                        android:id="@+id/login_password_et"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_80"
                        android:layout_weight="1"
                        android:background="@color/color_transparent"
                        android:drawableLeft="@drawable/amap_man"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/dp_15"
                        android:singleLine="true" />

                    <RelativeLayout
                        android:id="@+id/login_password_hold_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12">


                        <CheckBox
                            android:id="@+id/login_password_eye_cb"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_centerInParent="true"
                            android:background="@drawable/selector_open_close_eye"
                            android:button="@null"
                            tools:visibility="visible" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_30">

                    <TextView
                        android:id="@+id/login_forget_pwd_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="忘记密码？"
                        android:padding="@dimen/dp_8"
                        android:textColor="@color/C_344a4c"
                        android:textSize="@dimen/dp_16"
                        android:visibility="visible" />

                    <CheckedTextView
                        android:id="@+id/login_change_pwd_or_code_ctv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="密码登录"
                        android:textColor="@color/C_333333"
                        android:textSize="@dimen/dp_16"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/register_action_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/color_transparent"
                        android:text="注册"
                        android:padding="@dimen/dp_8"
                        android:textColor="@color/C_344a4c"
                        android:textSize="@dimen/dp_16" />

                </RelativeLayout>

                <Button
                    android:id="@+id/login_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_margin="@dimen/dp_70"
                    android:background="@drawable/shape_gradient_line_180_green2blue_corner40404040_rect"
                    android:text="立即登录"
                    android:textColor="@color/color_FEFFFF"
                    android:textSize="@dimen/dp_36" />

                <TextView
                    android:id="@+id/login_get_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="验证码登陆"
                    android:textColor="@color/C_344a4c"
                    android:textSize="@dimen/dp_16"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/login_by_out_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="@dimen/dp_120"
            android:background="@drawable/shape_white_solid_corner40404040"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="第三方快捷登录"
            android:textColor="@color/c_626364"
            android:textSize="@dimen/dp_34"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F0F9FF"
        android:paddingBottom="@dimen/dp_87">

        <include
            android:id="@+id/common_title_bar"
            layout="@layout/app_common_titlebar" />

        <ImageView
            android:id="@+id/login_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:background="@mipmap/register_login_banner"
            app:layout_constraintTop_toBottomOf="@+id/common_title_bar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/login_body_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_182"
            android:layout_marginRight="@dimen/dp_15"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_2"
            app:contentPaddingLeft="@dimen/dp_15"
            app:contentPaddingRight="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/common_title_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/shape_grey_stroke_6_radius_rect">

                    <EditText
                        android:id="@+id/login_username_et"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/login_user_clear_iv"
                        android:background="@color/color_transparent"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:hint="请输入手机号/邮箱"
                        android:paddingLeft="@dimen/dp_15"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/login_user_clear_iv"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="invisible"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@mipmap/login_user_clear" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/shape_grey_stroke_6_radius_rect"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/login_password_et"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_48"
                        android:layout_weight="1"
                        android:background="@color/color_transparent"
                        android:ellipsize="end"
                        android:gravity="left|center_vertical"
                        android:hint="请输入6位验证码"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/dp_15"
                        android:singleLine="true" />

                    <RelativeLayout
                        android:id="@+id/login_password_hold_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12">

                        <TextView
                            android:id="@+id/login_get_code_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="验证码登陆"
                            android:textColor="#f9993f"
                            android:textSize="@dimen/dp_14"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <CheckBox
                            android:id="@+id/login_password_eye_cb"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_centerInParent="true"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:background="@drawable/selector_open_close_eye"
                            android:button="@null" />

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_30">

                    <TextView
                        android:id="@+id/login_forget_pwd_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="忘记密码？"
                        android:visibility="gone"
                        android:textColor="@color/C_333333"
                        android:textSize="@dimen/dp_12" />

                    <CheckedTextView
                        android:id="@+id/login_change_pwd_or_code_ctv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="密码登录"
                        android:textColor="@color/C_333333"
                        android:textSize="@dimen/dp_12" />
                </RelativeLayout>

                <Button
                    android:id="@+id/login_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/shape_gradient_line_login_btn"
                    android:text="立即登录"
                    android:textColor="@color/color_FEFFFF"
                    android:textSize="@dimen/dp_16" />

                <Button
                    android:id="@+id/register_action_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:background="@drawable/shape_gradient_line_register_btn"
                    android:text="注册"
                    android:textColor="@color/color_009BB2"
                    android:textSize="@dimen/dp_16" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginRight="@dimen/dp_65"
            android:background="@color/color_e0e0e0"
            app:layout_constraintBottom_toBottomOf="@id/login_by_out_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_by_out_tv"
            app:layout_constraintTop_toTopOf="@id/login_by_out_tv" />

        <TextView
            android:id="@+id/login_by_out_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/color_F0F9FF"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="第三方快捷登录"
            android:textColor="@color/color_999"
            android:textSize="@dimen/dp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_body_cv" />

        <ImageView
            android:id="@+id/login_by_qq_iv"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/login_qq"
            app:layout_constraintEnd_toStartOf="@+id/login_by_wx_iv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_by_out_tv" />

        <ImageView
            android:id="@+id/login_by_wx_iv"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/login_weixin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/login_by_qq_iv"
            app:layout_constraintTop_toBottomOf="@+id/login_by_out_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
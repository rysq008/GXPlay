<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <LinearLayout
        android:layout_marginBottom="@dimen/tabbar_divider_height"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="昵称"
            android:id="@+id/tv_left"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="金额"
            android:id="@+id/tv_center"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="状态"
            android:id="@+id/tv_right"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <cn.droidlover.xrecyclerview.XRecyclerContentLayout
        android:id="@+id/rc_extension_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

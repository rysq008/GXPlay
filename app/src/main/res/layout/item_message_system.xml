<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/tv_tittle"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_alignTop="@+id/tv_tittle"
        android:layout_alignParentBottom="@+id/tv_tittle"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_message"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="1dp"
        android:layout_width="@dimen/text_size_small"
        android:layout_height="@dimen/text_size_small" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:visibility="gone"
        android:background="@color/colorDivider"
        android:layout_below="@+id/tv_tittle"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/colorPrimary"
            android:layout_width="@dimen/tabbar_divider_height"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_content"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textColor="@color/colorShadowDark"
            android:textSize="@dimen/text_size_small"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"/>
</RelativeLayout>
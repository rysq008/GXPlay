<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_action_bar"/>
    
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:id="@+id/iv_avatara"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50" />
            <ImageView
                android:id="@+id/iv_vip_levela"
                android:src="@mipmap/vip_0"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_namea"
                android:text="simon"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_platforma"
                android:layout_marginTop="@dimen/dp_5"
                android:text="乐友端"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorShadow"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="账号绑定身份："
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_identya"
                    android:text="素影"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="账号创建时间："
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_timea"
                    android:text="07-01-01"
                    android:textColor="@color/colorShadow"
                    android:textSize="@dimen/text_size_small"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="时间"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="金额"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="折扣"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:text="实扣金额"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_small"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <cn.droidlover.xrecyclerview.XRecyclerContentLayout
            android:id="@+id/rc_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:background="@color/colorWhiteTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="总计支付："
            android:gravity="bottom"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:id="@+id/tv_value_lefta"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_xxlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元"
            android:gravity="bottom"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="总计省："
            android:gravity="bottom|right"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:id="@+id/tv_value_righta"
            android:gravity="bottom"
            android:layout_marginTop="1dp"
            android:textColor="@color/red"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="2dp"
            android:textSize="@dimen/text_size_xxlarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元"
            android:gravity="bottom"
            android:textSize="@dimen/text_size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
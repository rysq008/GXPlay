<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.game.helper.fragments.login.LoginFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_login_head_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_bar_back"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:gravity="center"
            android:padding="@dimen/dp_15">

            <ImageView
                android:id="@+id/action_bar_back_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/action_bar_tittle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_xlarge" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignTop="@+id/logo"
        android:padding="3dp"
        android:src="@mipmap/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_tab_message"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="验证码登录"
                android:textColor="@color/colorTransWhite"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_tab_passwd"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="密码登录"
                android:textColor="@color/colorTransWhite"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/bg_login_input_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_phone" />

                <com.game.helper.views.EditInputView
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    app:eiv_hint="输入手机号"
                    app:eiv_maxlength="11"
                    app:eiv_type="type_code" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_secret" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.game.helper.views.EditInputView
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        app:eiv_hint="输入密码/验证码"
                        app:eiv_type="type_password" />

                    <com.game.helper.views.widget.CountDownText
                        android:id="@+id/tv_left_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="获取验证码"
                        android:textColor="@color/colorShadow"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/tv_forget_passwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_5"
                android:text="忘记密码？"
                android:textColor="@color/colorShadow"
                android:textSize="@dimen/text_size_tiny" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@drawable/bg_normal_gradient_submit"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_goto_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="新用户注册"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text_size_tiny"
        android:visibility="gone" />
</RelativeLayout>

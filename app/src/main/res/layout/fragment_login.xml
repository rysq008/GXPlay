<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.game.helper.fragments.login.LoginFragment">
    <View
        android:background="@drawable/bg_login_head_blue"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_bar_back"
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:gravity="center"
            android:padding="@dimen/dp_15">

            <ImageView
                android:id="@+id/action_bar_back_iv"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/action_bar_tittle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_xlarge" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="密码登录"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:maxLines="1"
                android:id="@+id/tv_tab_passwd"
                android:textColor="@color/colorTransWhite"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_10"
                android:background="@color/colorWhite"/>
            <TextView
                android:text="验证码登录"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:maxLines="1"
                android:id="@+id/tv_tab_message"
                android:textColor="@color/colorTransWhite"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/dp_5"
            android:padding="@dimen/dp_45"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_login_input_white"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_phone"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <com.game.helper.views.EditInputView
                    android:id="@+id/et_account"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:eiv_hint="输入手机号"
                    app:eiv_type="type_account"/>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_secret"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <com.game.helper.views.EditInputView
                        android:id="@+id/et_password"
                        app:eiv_hint="输入密码/验证码"
                        app:eiv_type="type_password"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <com.game.helper.views.widget.CountDownText
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_left_time"
                        android:text="获取验证码"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/colorShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <TextView
                android:id="@+id/tv_forget_passwd"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorShadow"
                android:text="忘记密码？"
                android:textSize="@dimen/text_size_tiny"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_marginTop="@dimen/dp_60"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorWhite"
            android:text="提交"
            android:gravity="center"
            android:background="@drawable/bg_normal_gradient_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="新用户注册"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_goto_regist"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_debug"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_tiny"
        android:textColor="@color/colorHint"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

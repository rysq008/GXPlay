<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    tools:context="com.game.helper.fragments.LoginFragment">

    <LinearLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_account"
            android:background="@drawable/bg_gradient_radius_hoop_grey"
            android:padding="@dimen/dp_10"
            android:hint="输入账号"
            android:textSize="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:background="@drawable/bg_gradient_radius_hoop_grey"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password"
                android:padding="@dimen/dp_10"
                android:hint="输入密码"
                android:background="@null"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.game.helper.views.widget.CountDownText
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_left_time"
                android:text="获取验证码"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorShadow"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_marginTop="@dimen/dp_30"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorWhite"
            android:text="密码登陆"
            android:gravity="center"
            android:background="@drawable/bg_gradient_radius_hoop_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_login_message"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="短信验证码登陆"
                android:textColor="@color/colorShadow"
                android:textSize="@dimen/text_size_tiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="@dimen/tabbar_divider_height"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorShadow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_debug"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_tiny"
        android:textColor="@color/colorHint"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

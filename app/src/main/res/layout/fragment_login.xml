<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.game.helper.fragments.login.LoginFragment">

    <include
        layout="@layout/layout_action_bar"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="密码登录"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:maxLines="1"
                android:background="@drawable/bg_normal_login_passwd_left"
                android:id="@+id/tv_tab_passwd"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content" />
            <TextView
                android:text="验证码登录"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:maxLines="1"
                android:background="@drawable/bg_normal_login_message_right"
                android:id="@+id/tv_tab_message"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:layout_width="@dimen/login_tab_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_phone"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <com.game.helper.views.EditInputView
                    android:id="@+id/et_account"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:eiv_hint="输入手机号"
                    app:eiv_type="type_account"/>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@mipmap/login_ic_secret"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <com.game.helper.views.EditInputView
                        android:id="@+id/et_password"
                        app:eiv_hint="输入密码/验证码"
                        app:eiv_type="type_password"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <com.game.helper.views.widget.CountDownText
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_left_time"
                        android:text="获取验证码"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/colorShadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_divider_height"
                android:background="@color/colorDivider"/>
            <TextView
                android:id="@+id/tv_forget_passwd"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorShadow"
                android:text="忘记密码？"
                android:textSize="@dimen/text_size_tiny"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/colorWhite"
            android:text="提交"
            android:gravity="center"
            android:background="@drawable/bg_normal_gradient_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="新用户注册"
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/tv_goto_regist"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_debug"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_tiny"
        android:textColor="@color/colorHint"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

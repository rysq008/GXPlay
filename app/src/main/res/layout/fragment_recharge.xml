<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.game.helper.fragments.recharge.RechargeFragment">

    <include
        android:id="@+id/action_bar"
        layout="@layout/layout_action_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/game_detail_tabs"
            android:background="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="48dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/game_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:recyclerBackgroundColor="#f5f5f5"
            app:recyclerScrollbarNone="true"
            app:recyclerScrollbarStyle="outsideOverlay" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_divider_height"
        android:background="@color/colorDivider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/colorWhite"
            android:textColor="@color/colorShadow"
            android:text="联系客服"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size_large"
            android:text="充值"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:background="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.game.helper.views.XReloadableStateContorller xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xreload_add_account_game_detail"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f6"
        android:orientation="vertical"
        tools:context="com.game.helper.activitys.AddAccountActivity">

        <include
            android:id="@+id/action_bar"
            layout="@layout/layout_action_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="账号："
                android:textColor="#333"
                android:textSize="@dimen/size_16sp" />

            <EditText
                android:id="@+id/accountEdit_add_account_game_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#999"
                android:textSize="@dimen/size_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="游戏："
                android:textColor="#333"
                android:textSize="@dimen/size_16sp" />

            <EditText
                android:id="@+id/gameEdit_add_account_game_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#999"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/selectGame_add_account_game_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/icon_arrow_gray"
                android:padding="@dimen/dp_10"
                android:text="选择游戏"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/colorDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="平台："
                android:textColor="#333"
                android:textSize="@dimen/size_16sp" />

            <EditText
                android:id="@+id/channelEdit_add_account_game_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="#999"
                android:textSize="@dimen/size_16sp" />

            <TextView
                android:id="@+id/selectChannel_add_account_game_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/icon_arrow_gray"
                android:padding="@dimen/dp_10"
                android:text="选择平台"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/submitTv_add_account_game_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="130dp"
                android:background="@drawable/bg_submit"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18sp" />

        </LinearLayout>

    </LinearLayout>
</com.game.helper.views.XReloadableStateContorller>

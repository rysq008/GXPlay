<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/shape_grey_stroke_6_radius_rect"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dialog_item_ticket_order_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单号"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />

    <TextView
        android:id="@+id/dialog_item_ticket_amount_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单总额"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />

    <TextView
        android:id="@+id/dialog_item_ticket_discounts_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="订单折扣"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />

    <TextView
        android:id="@+id/dialog_item_ticket_cope_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="应付金额"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />

    <TextView
        android:id="@+id/dialog_item_ticket_paid_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="实付余额"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />

    <CheckBox
        android:id="@+id/dialog_item_ticket_select_cb"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="打印此单"
        android:textColor="@color/color_999"
        android:textSize="@dimen/dp_9" />
</LinearLayout>
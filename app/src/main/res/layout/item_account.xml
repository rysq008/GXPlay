<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/iv_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp" />
        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorShadow"
                android:text="游戏账号"
                android:textSize="@dimen/size_10sp"/>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/gameAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                tools:text="hello word!"
                android:textSize="@dimen/size_18sp"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/gameNameLayout"
        android:layout_toRightOf="@+id/nameLayout"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorShadow"
            android:text="游戏名称"
            android:textSize="@dimen/size_10sp"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            tools:text="hello word!"
            android:textSize="@dimen/size_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/channelLayout"
        android:layout_toRightOf="@+id/gameNameLayout"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorShadow"
            android:text="游戏平台"
            android:textSize="@dimen/size_10sp"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/gameChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            tools:text="hello word!"
            android:textSize="@dimen/size_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/channelLayout"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorShadow"
            android:text="游戏等级"
            android:textSize="@dimen/size_10sp"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/gameLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            tools:text="VIP1"
            android:textSize="@dimen/size_18sp"/>
    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/checkStatusIv"
        android:src="@mipmap/icon_account_status_selected"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_255"
    android:background="@color/white"
    android:paddingTop="@dimen/dp_20"
    tools:background="@color/white">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:text="@{dto.date}"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_32"
        tools:text="09.23"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_below="@+id/date"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                tools:text="@string/workArea"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/workTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                tools:text="@string/workTime"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/unlineTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                tools:text="@string/unlineTime"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/grey"
                tools:text="@string/mileage"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/runningTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:textColor="@color/grey"
                tools:text="@string/runningTime"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/workType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                tools:text="@string/workType"
                android:lineSpacingMultiplier="0.8"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>



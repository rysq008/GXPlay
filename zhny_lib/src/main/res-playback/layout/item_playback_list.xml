<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
       <variable
           name="playbackInfoDto"
           type="com.zhny.library.presenter.playback.model.PlaybackInfoDto" />
        
        <variable
            name="itemClick"
            type="com.zhny.library.presenter.playback.listener.OnItemClickListener" />
    </data>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:paddingTop="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_30"
        tools:background="#cccccc"
        android:gravity="center_vertical"
        android:onClick="@{()->itemClick.onItemClick(playbackInfoDto)}">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitCenter"
            app:roundImg="@{playbackInfoDto.imgUrl}"
            android:layout_marginStart="@dimen/dp_30"
            tools:src="@drawable/default_machine_icon"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="@dimen/dp_40"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_9">

            <TextView
                android:id="@+id/machineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/black"
                android:text="@{playbackInfoDto.name}"
                tools:text="测试"/>

            <TextView
                android:id="@+id/machineBrandAndModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_24"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="@color/grey"
                android:text="@{playbackInfoDto.brand_model}"
                tools:text="测试"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/color_009688"
            android:text="@{playbackInfoDto.productType}"
            android:background="@drawable/border_bg"
            android:layout_alignParentEnd="true"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_9"
            tools:text="测试机器"/>

    </RelativeLayout>

</layout>
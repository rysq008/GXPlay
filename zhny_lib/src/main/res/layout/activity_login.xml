<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_600"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_50"
            app:layout_constraintBottom_toTopOf="@+id/cl_psw"
            >

            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_account_circle"
                tools:ignore="ContentDescription" />


            <EditText
                android:id="@+id/username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32"
                android:selectAllOnFocus="true"
                android:background="@null"
                android:inputType="text"
                android:hint="@string/login_text_please_input_username"
                android:text="T03"
                android:textColorHint="@color/white"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:layout_constraintLeft_toRightOf="@+id/iv_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="Autofill" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_psw"
            android:layout_width="@dimen/dp_600"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_80"
            app:layout_constraintBottom_toTopOf="@+id/tv_login"
            >

            <ImageView
                android:id="@+id/iv_psw"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_lock"
                tools:ignore="ContentDescription" />


            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:background="@null"
                android:hint="@string/login_text_please_input_password"
                android:text="admin123"
                android:textColorHint="@color/white"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                app:layout_constraintLeft_toRightOf="@+id/iv_psw"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="Autofill" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>




        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/shape_monitor_operator_bg"
            android:gravity="center"
            android:onClick="login"
            android:text="@string/btn_login_text"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_80"
            android:background="@drawable/shape_monitor_operator_bg"
            android:gravity="center"
            android:onClick="mapToLogin"
            android:text="模拟map跳转"
            android:visibility="visible"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@+id/tv_login"
            />


          <Button
              android:id="@+id/driver"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="start"
              android:enabled="true"
              android:onClick="driver"
              android:visibility="gone"
              android:text="test"
              android:layout_marginStart="@dimen/dp_30"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.alarm.viewmodel.AlarmViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_app_compat" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smart_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_10">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/alarm_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.emptyMag?View.GONE:View.VISIBLE,default=gone}"
                    tools:listitem="@layout/item_alarm_fence_list" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/dp_630"
                    android:layout_height="@dimen/dp_480"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_120"
                    android:visibility="@{viewModel.emptyMag?View.VISIBLE:View.GONE,default=visible}">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_machine_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/pre_add_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cus_not_data"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </LinearLayout>

</layout>
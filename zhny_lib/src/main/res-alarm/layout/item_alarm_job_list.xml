<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="alarmDto"
            type="com.zhny.library.presenter.alarm.dto.AlarmDto" />
        <variable
            name="onMsgDetailListener"
            type="com.zhny.library.presenter.alarm.adapter.AlarmAdapter.OnMsgDetailListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_560"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_38"
            android:gravity="center"
            android:text="@{alarmDto.convertDate}"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_22"
            tools:text="上午8：48" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/dp_690"
            android:layout_height="@dimen/dp_460"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_alarm_item_bg"
            tools:background="@color/grey">

            <ImageView
                android:id="@+id/iv_alarm_job"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:scaleType="fitXY"
                android:src="@drawable/icon_agricultural_machinery"
                app:layout_constraintTop_toTopOf="@+id/tv_alarm_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_alarm_title"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_alarm_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_37"
                android:layout_marginStart="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_30"
                android:maxWidth="@dimen/dp_585"
                android:text="@{alarmDto.typeMeaning}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="作业提示" />

            <View
                android:id="@+id/border_one"
                android:layout_width="@dimen/dp_630"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_97"
                android:background="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/msg_is_not_read"
                android:visibility="@{alarmDto.isRead?View.GONE:View.VISIBLE,default=gone}"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/tv_alarm_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:maxWidth="@dimen/dp_630"
                android:text="@{alarmDto.description}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_one"
                tools:text="有新的作业数据产生" />

            <TextView
                android:id="@+id/tv_pre_machine_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="@string/alarm_job_farm_plot"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_alarm_content" />

            <TextView
                android:id="@+id/tv_machine_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center"
                android:maxWidth="@dimen/dp_504"
                android:text="@{alarmDto.farmName+'-'+alarmDto.fieldName}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@id/tv_pre_machine_name"
                app:layout_constraintStart_toEndOf="@id/tv_pre_machine_name"
                app:layout_constraintTop_toTopOf="@id/tv_pre_machine_name"
                tools:text="农场-地块" />


            <TextView
                android:id="@+id/tv_pre_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="@string/alarm_job_type"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pre_machine_name" />

            <TextView
                android:id="@+id/tv_driver_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@{alarmDto.jobTypeMeaning}"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@id/tv_pre_driver_name"
                app:layout_constraintStart_toEndOf="@id/tv_pre_driver_name"
                app:layout_constraintTop_toTopOf="@id/tv_pre_driver_name"
                tools:text="播种作业" />


            <TextView
                android:id="@+id/tv_job_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="@string/alarm_job_time"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pre_driver_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@{alarmDto.startDate+'~'+alarmDto.endDate}"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@id/tv_job_time"
                app:layout_constraintStart_toEndOf="@id/tv_job_time"
                app:layout_constraintTop_toTopOf="@id/tv_job_time"
                tools:text="2020-03-25 09:16:14~2020-03-25 09:16:14" />

            <View
                android:id="@+id/border_two"
                android:layout_width="@dimen/dp_630"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/border"
                app:layout_constraintTop_toBottomOf="@+id/tv_job_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/border_two"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:onClick="@{()->onMsgDetailListener.onMsgDetail(alarmDto)}"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:text="@string/see_alarm_detail"
                    android:textColor="@{alarmDto.isRead?@color/color_999999:@color/black,default=@color/black}"
                    android:textSize="@dimen/sp_28"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_31"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:src="@drawable/icon_right01"
                    android:layout_alignParentEnd="true"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>
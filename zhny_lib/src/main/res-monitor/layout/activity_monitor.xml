<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.zhny.library.presenter.monitor.viewmodel.MonitorViewModel" />

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dl_monitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amap.api.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60" />

            <include layout="@layout/toolbar_app_compat" />


            <com.amap.api.maps.MapView
                android:id="@+id/monitor_map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_128"
                android:layout_marginBottom="@dimen/dp_160"
                tools:background="@color/lib_color_primary" />

            <include
                android:id="@+id/layout_monitor_show_num_view"
                layout="@layout/layout_monitor_show_num_view"
                android:layout_width="@dimen/dp_144"
                android:layout_height="@dimen/dp_193"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_158"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_app"
                bind:viewModel="@{viewModel}" />

            <RelativeLayout
                android:id="@+id/rl_monitor_doubleleft"
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_51"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_158"
                android:background="@drawable/shape_monitor_doubleleft_bg"
                android:onClick="doubleLeft"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_app">

                <ImageView
                    android:id="@+id/iv_doubleleft"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_doubleleft"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_262"
                android:background="@drawable/shape_monitor_location_bg"
                android:onClick="clickLocation"
                android:visibility="@{viewModel.isShowLocationView?View.VISIBLE:View.GONE}">

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/icon_orientation"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_162"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_180"
                android:visibility="@{viewModel.isShowLocationView?View.VISIBLE:View.GONE}">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape_add_or_remove"
                    android:onClick="onMapZoomIn">

                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@drawable/ic_add_blue"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_add_or_remove"
                    android:onClick="onMapZoomOut">

                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@drawable/ic_remove_blue"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_operator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="@dimen/dp_690"
                    android:layout_height="@dimen/dp_80"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_monitor_operator_bg"
                    android:gravity="center"
                    android:onClick="operator"
                    android:text="@string/monitor_operator"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sp_32" />

            </RelativeLayout>


            <include
                android:id="@+id/gl_monitor_base_data"
                layout="@layout/layout_monitor_base_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_694"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_m_424"
                android:visibility="gone"
                bind:viewModel="@{viewModel}" />


        </FrameLayout>

        <include
            android:id="@+id/ll_monitor_select_view"
            layout="@layout/layout_monitor_select_view"
            android:layout_width="@dimen/dp_435"
            android:layout_height="@dimen/dp_986"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_158"
            bind:viewModel="@{viewModel}" />

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>

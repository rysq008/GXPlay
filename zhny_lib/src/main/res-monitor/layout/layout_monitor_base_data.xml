<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.monitor.viewmodel.MonitorViewModel" />
    </data>

    <com.zhny.library.presenter.monitor.custom.GestureLayout
        android:id="@+id/gl_monitor_base_data_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:visibility="@{viewModel.isShowBaseDataView?View.VISIBLE:View.GONE}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_app"
        tools:background="@color/color_89C6C0"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_base_data"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_monitor_base_data_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_32"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textStrNotNull="@{viewModel.machineDto.name}"
                tools:text="沙雅打药一号机沙雅打药一号机" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_monitor_base_data_type_bg"
                android:gravity="center"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:textColor="#FF009688"
                android:textSize="@dimen/sp_22"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:textStrNotNull="@{viewModel.machineDto.productType}"
                tools:text="沙雅打药一号机沙雅打药一号机" />

            <ImageView
                android:id="@+id/iv_monitor_base_data_bg"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_120"
                android:layout_marginTop="@dimen/dp_28"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_name"
                app:roundImg="@{viewModel.machineDto.imgUrl}"
                tools:background="@color/lib_color_primary" />

            <TextView
                android:id="@+id/tv_monitor_base_data_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:text="@string/monitor_base_data_brand"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toRightOf="@+id/iv_monitor_base_data_bg"
                app:layout_constraintTop_toTopOf="@+id/iv_monitor_base_data_bg" />

            <TextView
                android:id="@+id/tv_monitor_base_data_brand_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_brand"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_brand"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_brand"
                app:textStrNotNull="@{viewModel.machineDto.productBrandMeaning}"
                tools:text="凯斯-2204" />

            <TextView
                android:id="@+id/tv_monitor_base_data_terminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/monitor_base_data_terminal"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toRightOf="@+id/iv_monitor_base_data_bg"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_brand" />

            <TextView
                android:id="@+id/tv_monitor_base_data_terminal_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_terminal"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_terminal"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_terminal"
                app:textStrNotNull="@{viewModel.machineDto.sn}"
                tools:text="AA236434474009" />

            <TextView
                android:id="@+id/tv_monitor_base_data_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/monitor_base_data_address"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toRightOf="@+id/iv_monitor_base_data_bg"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_terminal" />

            <TextView
                android:id="@+id/tv_monitor_base_data_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_address"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_address"
                app:textStrNotNull="@{viewModel.machineDto.address}"
                tools:text="云南省昆明市呈贡区xx地云南省昆明市呈贡区xx地云南省昆明市呈贡区xx地" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/v_line_monitor_base_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#FFF4F4F4"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_base_data" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_340"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line_monitor_base_data">

            <TextView
                android:id="@+id/tv_monitor_base_data_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor_base_data_update_time"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_monitor_base_data_update_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_update_time"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_update_time"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_update_time"
                app:textConvertTime="@{viewModel.machineProper.updatedTimestamp}" />

            <TextView
                android:id="@+id/tv_monitor_base_data_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/monitor_base_data_area"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_update_time" />

            <TextView
                android:id="@+id/tv_monitor_base_data_area_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_area"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_area"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_area"
                app:textStrNotNull="@{viewModel.machineProper.convertReportArea}" />


            <TextView
                android:id="@+id/tv_monitor_base_data_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/monitor_base_data_work_time"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_area" />

            <TextView
                android:id="@+id/tv_monitor_base_data_work_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_work_time"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_work_time"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_work_time"
                app:textStrNotNull="@{viewModel.machineProper.convertJobDuration}" />

            <TextView
                android:id="@+id/tv_monitor_base_data_offline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/monitor_base_data_offline_time"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_work_time" />

            <TextView
                android:id="@+id/tv_monitor_base_data_offline_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                android:text="-"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_offline_time"
                app:layout_constraintLeft_toRightOf="@+id/tv_monitor_base_data_offline_time"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_offline_time"
                />

            <!--app:textStrNotNull="@{viewModel.machineProper.convertOfflineDuration}" -->


            <TextView
                android:id="@+id/tv_monitor_base_data_driver_distance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_area"
                app:textStrNotNull="@{viewModel.machineProper.convertMileage}" />

            <TextView
                android:id="@+id/tv_monitor_base_data_driver_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor_base_data_driver_distance"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_driver_distance_value"
                app:layout_constraintRight_toLeftOf="@+id/tv_monitor_base_data_driver_distance_value"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_driver_distance_value" />

            <TextView
                android:id="@+id/tv_monitor_base_data_running_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                android:text="-"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_monitor_base_data_driver_distance_value"
                 />
            <!--app:textStrNotNull="@{viewModel.machineProper.convertRunningDuration}"-->

            <TextView
                android:id="@+id/tv_monitor_base_data_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor_base_data_running_time"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_24"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_base_data_running_time_value"
                app:layout_constraintRight_toLeftOf="@+id/tv_monitor_base_data_running_time_value"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_base_data_running_time_value" />


            <TextView
                android:layout_width="@dimen/dp_330"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_monitor_operator_bg"
                android:gravity="center"
                android:onClick="historyPath"
                android:text="@string/monitor_history_path"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:layout_width="@dimen/dp_330"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_monitor_operator_bg"
                android:gravity="center"
                android:onClick="monitoring"
                android:text="@string/monitor_monitoring"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.zhny.library.presenter.monitor.custom.GestureLayout>

</layout>
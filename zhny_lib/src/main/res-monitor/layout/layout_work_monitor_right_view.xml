<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="clickListener"
            type="com.zhny.library.presenter.work.listener.WorkTrackViewClickListener" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.monitor.viewmodel.MonitoringViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_monitoring_speed_bg"
        >


        <ImageView
            android:id="@+id/img_switch_picture"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_29"
            android:onClick="@{()->clickListener.onSwitchPicture()}"
            android:scaleType="fitXY"
            android:src="@{viewModel.showPicture?@drawable/icon_switch_open:@drawable/icon_switch_close}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/icon_switch_open"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/picture"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_28"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_switch_picture"
            app:layout_constraintBottom_toBottomOf="@id/img_switch_picture"
            tools:text="照片"/>


        <ImageView
            android:id="@+id/img_switch_width"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_27"
            android:onClick="@{()->clickListener.onSwitchWidth()}"
            android:scaleType="fitXY"
            android:src="@{viewModel.showWidth?@drawable/icon_switch_open:@drawable/icon_switch_close,default=@drawable/icon_switch_close}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/icon_switch_close"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/width"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_28"
            app:layout_constraintBottom_toBottomOf="@id/img_switch_width"
            app:layout_constraintTop_toTopOf="@id/img_switch_width"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="幅宽"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
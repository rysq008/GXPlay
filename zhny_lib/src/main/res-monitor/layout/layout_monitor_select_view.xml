<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.monitor.viewmodel.MonitorViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/ll_monitor_select_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_monitor_select_bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_monitor_select_machine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_102"
            android:onClick="showOrCloseMachineList"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_monitor_select_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:text="@string/monitor_select_machine"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/tv_show_or_close_machine"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/selector_show_or_close_body"
                app:layout_constraintBottom_toBottomOf="@+id/tv_monitor_select_machine"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_monitor_select_machine"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:background="@color/lib_color_primary"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_monitor_select_machine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.isShowMachines?View.VISIBLE:View.GONE,default=visible}"
                tools:layout_height="@dimen/dp_360"
                tools:listitem="@layout/layout_item_monitor_select_machine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFF4F4F4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:background="@color/lib_color_primary"
                />

            <com.zhny.library.presenter.monitor.custom.expand.FloatingGroupExpandableListView
                android:id="@+id/expandable_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                android:groupIndicator="@null"
                android:childIndicator="@null"
                android:childDivider="@null"
                android:divider="@null"
                tools:listitem="@layout/layout_item_monitor_expand_parent" />


        </LinearLayout>

    </LinearLayout>

</layout>
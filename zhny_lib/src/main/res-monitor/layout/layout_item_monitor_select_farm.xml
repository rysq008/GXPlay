<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="farm"
            type="com.zhny.library.presenter.monitor.model.dto.SelectFarmDto" />

        <variable
            name="farmListener"
            type="com.zhny.library.presenter.monitor.listener.SelectFarmListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->farmListener.onFarmSelected(farm)}"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_monitor_select_farm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_102"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/tv_item_monitor_select_farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dp_310"
                android:singleLine="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                app:textStrNotNull="@{farm.farmName}"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_32"
                tools:text="农场1农场1农场1农场1农场1农场1农场1"
                />

            <ImageView
                android:id="@+id/iv_item_monitor_select_farm_switch"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/selector_show_or_close_body"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_item_monitor_select_farm_name"
                app:layout_constraintBottom_toBottomOf="@+id/tv_item_monitor_select_farm_name"
                android:layout_marginEnd="@dimen/dp_30"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_monitor_select_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_item_monitor_select_farm"
            android:orientation="vertical"
            android:visibility="gone"
            tools:listitem="@layout/layout_item_monitor_select_plot"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:background="@color/lib_color_primary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
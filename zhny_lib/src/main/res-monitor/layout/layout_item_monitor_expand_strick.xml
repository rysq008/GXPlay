<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_102"
        >

        <TextView
            android:id="@+id/monitor_expand_strick_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_310"
            android:singleLine="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#FF000000"
            android:textSize="@dimen/sp_32"
            tools:text="农场1农场1农场1农场1农场1农场1农场1"
            />

        <ImageView
            android:id="@+id/iv_item_monitor_select_farm_switch"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/selector_show_or_close_body"
            app:layout_constraintTop_toTopOf="@+id/monitor_expand_strick_group"
            app:layout_constraintBottom_toBottomOf="@+id/monitor_expand_strick_group"
            android:layout_marginEnd="@dimen/dp_30"
            tools:ignore="ContentDescription" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:background="@color/lib_color_primary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
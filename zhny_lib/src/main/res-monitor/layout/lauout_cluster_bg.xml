<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_area_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/black"
        android:background="@drawable/shape_cluster_bg_area"
        tools:text="测试省份"
        />

    <TextView
        android:id="@+id/tv_area_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/tv_area_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_area_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_area_name"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/white"
        android:background="@drawable/shape_cluster_bg_num"
        tools:text="20"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
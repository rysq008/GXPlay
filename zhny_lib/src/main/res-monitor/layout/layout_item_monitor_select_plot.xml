<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="plot"
            type="com.zhny.library.presenter.monitor.model.dto.SelectFarmDto.SelectPlotDto" />

        <variable
            name="plotListener"
            type="com.zhny.library.presenter.monitor.listener.SelectPlotListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:onClick="@{()->plotListener.onPlotSelected(plot)}"
        >

        <com.zhny.library.presenter.monitor.custom.PolygonShapeView
            android:id="@+id/ps_item_monitor_select_plot_view"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:background="@drawable/shape_monitor_plot__radius_bg"
            android:padding="@dimen/dp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/dp_30"
            app:plotDrawPath="@{plot.mapPath}"
            />

        <TextView
            android:id="@+id/tv_item_monitor_select_plot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_225"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@+id/ps_item_monitor_select_plot_view"
            app:layout_constraintBottom_toBottomOf="@+id/ps_item_monitor_select_plot_view"
            app:layout_constraintLeft_toRightOf="@+id/ps_item_monitor_select_plot_view"
            android:layout_marginStart="@dimen/dp_30"
            app:textStrNotNull="@{plot.fieldName}"
            android:textColor="#000000"
            android:textSize="@dimen/sp_32"
            tools:text="测试地块测试地块测试地块测试地块测"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF4F4F4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@color/lib_color_primary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.work.viewmodel.WorkTrackViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_monitor_num_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_28"
            android:gravity="center"
            android:text="@{viewModel.jobType}"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@color/border"
            android:visibility="@{viewModel.isPloughing?View.VISIBLE:View.GONE,default=visible}"/>

        <LinearLayout
            android:id="@+id/layout_ploughing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_143"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            android:visibility="@{viewModel.isPloughing?View.VISIBLE:View.GONE,default=visible}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="@string/accuracy_rate"
                    android:textColor="@color/color_EE5E53"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/accuracy_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.accuracyRate}"
                    android:textColor="@color/color_EE5E53"
                    android:textSize="@dimen/sp_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="@string/set_value"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/set_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.standardValue}"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="@string/float_value"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/float_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.floatValue}"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_8"
            android:visibility="@{viewModel.isPloughing?View.GONE:View.VISIBLE,default=gone}" />
    </LinearLayout>
</layout>
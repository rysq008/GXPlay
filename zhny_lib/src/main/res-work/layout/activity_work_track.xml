<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="clickListener"
            type="com.zhny.library.presenter.work.listener.WorkTrackViewClickListener" />
        <variable
            name="viewModel"
            type="com.zhny.library.presenter.work.viewmodel.WorkTrackViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@color/lib_color_primary">

        <include layout="@layout/toolbar_app_compat" />

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_128" />

        <include
            android:id="@+id/layout_work_track_left_view"
            layout="@layout/layout_work_track_left_view"
            android:layout_width="@dimen/dp_219"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_158"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_app" />

        <include
            android:id="@+id/layout_work_track_right_view"
            layout="@layout/layout_work_track_right_view"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_150"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_158"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_app" />

        <RelativeLayout
            android:id="@+id/rl_location"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_112"
            android:background="@drawable/shape_monitor_location_bg"
            android:onClick="clickReBackView">

            <ImageView
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/ic_settings_backup_blue"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_zoom"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_162"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@drawable/shape_add_or_remove"
                android:onClick="@{()->clickListener.onZoom(true)}">

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/ic_add_blue"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_add_or_remove"
                android:onClick="@{()->clickListener.onZoom(false)}">
                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/ic_remove_blue"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </RelativeLayout>


    </FrameLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.zhny.library.presenter.work.viewmodel.SelectLandViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.amap.api.maps.MapView
            android:id="@+id/land_map_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50" />

        <include layout="@layout/toolbar_app_compat" />


        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smooth_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_128">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:background="@drawable/shape_select_land_select"
                    android:layout_margin="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/et_select_land"
                        android:src="@drawable/ic_search_white"/>

                    <EditText
                        android:id="@+id/et_select_land"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_110"
                        android:layout_marginEnd="@dimen/dp_110"
                        android:background="@null"
                        android:singleLine="true"
                        android:inputType="text"
                        android:textColor="#FF000000"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_32"
                        android:hint="@string/hint_select_land_select_plot"
                        tools:ignore="Autofill" />

                    <ImageView
                        android:layout_width="@dimen/dp_46"
                        android:layout_height="@dimen/dp_46"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/et_select_land"
                        android:onClick="clearLandSearch"
                        android:visibility="@{viewModel.isShowClear?View.VISIBLE:View.GONE,default=gone}"
                        android:src="@drawable/icon_close_pic"
                        tools:ignore="ContentDescription" />



                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/farm_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/layout_item_select_farm"/>

            </LinearLayout>


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    </FrameLayout>

</layout>
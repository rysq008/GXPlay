<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
    </data>


        <com.zhny.library.presenter.work.custom.wheelview.WheelPicker
            android:id="@+id/wp_value_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:wheel_atmospheric="false"
            app:wheel_curved="false"
            app:wheel_cyclic="false"
            app:wheel_item_space="@dimen/dp_16"
            app:wheel_item_text_color="#82898c"
            app:wheel_item_text_size="@dimen/sp_25"
            app:wheel_item_select_text_size="@dimen/sp_26"
            app:wheel_same_width="true"
            app:wheel_selected_item_text_color="#009688"
            app:wheel_visible_item_count="5"
            />

</layout>
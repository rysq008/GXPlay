<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.driver.viewmodel.AddDriverViewmodel" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_536"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

            <TextView
                android:id="@+id/pre_driver_name"
                android:layout_width="@dimen/dp_153"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="@string/driver_name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_120"
                android:gravity="center"
                android:text="@string/star"
                android:textColor="@color/color_EE5E53"
                app:layout_constraintEnd_toEndOf="@id/pre_driver_name"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ev_driver_name"
                android:layout_width="@dimen/dp_400"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="@string/please_enter"
                android:maxWidth="@dimen/dp_207"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,TextFields" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120">

            <TextView
                android:id="@+id/pre_driver_phone"
                android:layout_width="@dimen/dp_153"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="@string/driver_phone"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_120"
                android:gravity="center"
                android:text="@string/star"
                android:textColor="@color/color_EE5E53"
                app:layout_constraintEnd_toEndOf="@id/pre_driver_phone"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ev_driver_phone"
                android:layout_width="@dimen/dp_400"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="@string/please_enter"
                android:inputType="phone"
                android:maxWidth="@dimen/dp_189"
                android:singleLine="true"
                android:maxLength="11"
                android:textColor="@color/color_999999"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="18009345043"
                tools:ignore="Autofill" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_296">

            <TextView
                android:id="@+id/pre_remarks"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_30"
                android:gravity="center_vertical"
                android:text="@string/remarks_title"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@null"
                android:maxWidth="@dimen/dp_690"
                android:maxHeight="@dimen/dp_164"
                android:hint="@string/please_enter"
                android:textColor="@color/color_999999"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_32"
                android:maxLength="50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pre_remarks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_32"
                android:text="@{viewModel.enterLimit}"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="machineDto"
            type="com.zhny.library.presenter.machine.model.dto.MachineDto" />

        <variable
            name="itemClick"
            type="com.zhny.library.presenter.machine.listener.ItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:onClick="@{()->itemClick.onItemClick(machineDto)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundImg="@{machineDto.imgUrl}"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dp_490"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@{machineDto.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dp_490"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@{machineDto.brand_model}"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/name" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
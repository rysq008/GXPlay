<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="machineDto"
            type="com.zhny.library.presenter.machine.model.dto.MachineDto" />

        <variable
            name="viewModel"
            type="com.zhny.library.presenter.machine.viewmodel.MachineDetailsViewmodel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_app_compat" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_214"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_120"
                android:layout_marginStart="@dimen/dp_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundImg="@{machineDto.imgUrl}"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:maxWidth="@dimen/dp_490"
                android:text="@{machineDto.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pre_brand_model"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/brand_model"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/name" />

            <TextView
                android:id="@+id/brand_model"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_30"
                android:maxWidth="@dimen/dp_450"
                android:text="@{machineDto.brand_model}"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toEndOf="@id/pre_brand_model"
                app:layout_constraintTop_toBottomOf="@id/name" />


            <TextView
                android:id="@+id/pre_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/work_type"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toBottomOf="@id/brand_model" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_20"
                android:maxWidth="@dimen/dp_450"
                android:text="@{machineDto.productType}"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:layout_constraintStart_toEndOf="@id/pre_type"
                app:layout_constraintTop_toBottomOf="@id/brand_model" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_one">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_horsepower"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/pre_horsepower"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/horsepower"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/horsepower"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.horsepower}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_horsepower" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_produceDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_horsepower">

                <TextView
                    android:id="@+id/pre_produceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/produceDate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/produceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.produceDate}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_produceDate" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_produceNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_produceDate">

                <TextView
                    android:id="@+id/pre_produceNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/produceNumber"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/produceNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.produceNumber}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_produceNumber" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_carNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_produceNumber">

                <TextView
                    android:id="@+id/pre_carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/carNumber"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/carNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.carNumber}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_carNumber" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_width"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_carNumber">

                <TextView
                    android:id="@+id/pre_width"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/width"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/width"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.width}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_width" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_monitorTerminalID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_width">

                <TextView
                    android:id="@+id/pre_monitorTerminalID"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/monitorTerminalID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/monitorTerminalID"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.monitorTerminalID}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_monitorTerminalID" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_creationDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_monitorTerminalID">

                <TextView
                    android:id="@+id/pre_creationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginStart="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/dp_200"
                    android:text="@string/creationDate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/creationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_98"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:gravity="center_vertical|end"
                    android:maxWidth="@dimen/dp_490"
                    android:singleLine="true"
                    android:text="@{viewModel.creationDate}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_32"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/border"
                    app:layout_constraintTop_toBottomOf="@id/pre_creationDate" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.zhny.library.presenter.fence.viewmodel.FenceInfoViewModel" />
        <variable
            name="onFenceInfoListener"
            type="com.zhny.library.presenter.fence.listener.OnFenceInfoViewListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFDFDF">

        <include layout="@layout/toolbar_app_compat"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fence_info_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_app"
            android:background="@color/white"
            android:visibility="@{viewModel.editFence?View.VISIBLE:View.GONE,default=visible}"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/dp_30"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/black"
                android:text="@string/fence_info_code"
                />

            <TextView
                android:id="@+id/tv_fence_info_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:textSize="@dimen/sp_32"
                android:textColor="#666666"
                app:textStrNotNull="@{viewModel.fenceData.code}"
                tools:text="333421AB"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fence_info_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            app:layout_constraintTop_toBottomOf="@+id/cl_fence_info_code"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_fence_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fence_info_name"
                android:layout_marginStart="@dimen/dp_30"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_fence_info_name"
                android:layout_width="0dp"
                app:layout_constraintVertical_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/tv_fence_info_name"
                android:gravity="end"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_30"
                android:textSize="@dimen/sp_32"
                android:textColor="#666666"
                android:background="@null"
                android:hint="@string/fence_info_hint_name"
                android:text="@{viewModel.fenceData.name}"
                tools:ignore="Autofill,LabelFor,TextFields" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fence_info_machine_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_106"
            app:layout_constraintTop_toBottomOf="@+id/cl_fence_info_name"
            android:layout_marginTop="@dimen/dp_2"
            >

            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_31"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/dp_30"
                android:background="#009688"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fence_info_machine_info"
                android:layout_marginStart="@dimen/dp_44"
                android:textSize="@dimen/sp_32"
                android:textColor="#009688"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:onClick="@{()->onFenceInfoListener.onAddMachineListener()}"
                >
                <ImageView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_add_blue"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginBottom="@dimen/dp_2"
            app:layout_constraintTop_toBottomOf="@+id/cl_fence_info_machine_info"
            app:layout_constraintBottom_toTopOf="@+id/cl_fence_info_operator"
            >
            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/srv_fence_info_linked_machine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/layout_item_fence_info_machine"
                />
        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fence_info_operator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="@dimen/dp_690"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_monitor_operator_bg"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/fence_save"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32"
                android:onClick="@{()->onFenceInfoListener.onFenceSaveListener()}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
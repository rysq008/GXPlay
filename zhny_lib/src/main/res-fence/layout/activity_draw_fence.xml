<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="canNext"
            type="java.lang.Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_app_compat" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_app">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/fence_area"-->
<!--                android:textColor="@color/grey"-->
<!--                android:textSize="@dimen/sp_25" />-->

            <TextView
                android:id="@+id/tv_fence_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/fence_default_area"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_25" />
        </LinearLayout>

        <com.amap.api.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_208" />



        <!--基点-->
        <View
            android:id="@+id/v_position"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <RelativeLayout
            android:layout_width="@dimen/dp_500"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_position">

            <com.zhny.library.presenter.fence.custom.pie.MenuChart
                android:id="@+id/menu_chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="@dimen/dp_148"
                android:layout_height="@dimen/dp_148"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_130"
                android:textSize="@dimen/sp_28"
                android:gravity="center"
                android:textColor="@color/white"
                android:clickable="@{canNext}"
                android:background="@{canNext?@drawable/shape_fence_ok_bg:@drawable/shape_fence_bg,default=@drawable/shape_fence_bg}"
                android:onClick="drawFenceNext"
                android:text="@string/fence_ok"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_162"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_add_or_remove"
                android:onClick="onMapZoomIn">

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/ic_add_blue"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_add_or_remove"
                android:onClick="onMapZoomOut">

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:src="@drawable/ic_remove_blue"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
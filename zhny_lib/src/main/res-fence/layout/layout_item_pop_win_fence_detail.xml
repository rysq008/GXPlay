<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="fenceMachine"
            type="com.zhny.library.presenter.fence.model.dto.FenceMachine" />

        <variable
            name="onFenceDetailPopWinListener"
            type="com.zhny.library.presenter.fence.custom.FenceDetailPopWin.OnFenceDetailPopWinListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180">

        <ImageView
            android:id="@+id/iv_item_fence_detail_select_machine_bg"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_120"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundImg="@{fenceMachine.imgUrl}"
            tools:background="@color/lib_color_primary"
            tools:ignore="ContentDescription" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_item_fence_detail_select_machine_bg"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="@dimen/dp_295"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="0.8"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_32"
                app:textStrNotNull="@{fenceMachine.name}"
                tools:text="哈哈哈测试设试设备超多十备超多十二个字" />

            <TextView
                android:id="@+id/model"
                android:layout_width="@dimen/dp_295"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_24"
                app:textStrNotNull="@{fenceMachine.brandAndModel}"
                tools:text="品牌-型号品牌-型号品牌-型号" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/shape_monitor_base_data_type_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textColor="#FF009688"
            android:textSize="@dimen/sp_22"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStrNotNull="@{fenceMachine.productType}"
            tools:text="打药机" />

        <TextView
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_31"
            android:layout_marginEnd="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/icon_delete"
            android:onClick="@{()->onFenceDetailPopWinListener.onMachineDeleteListener(fenceMachine)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FFF4F4F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:background="@color/lib_color_primary" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="hasContent"
            type="java.lang.Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fence_select_fence_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_monitor_select_bg"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_fence_select_fence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_30"
            tools:listitem="@layout/layout_item_fence_select_fence"
            android:visibility="@{hasContent?View.VISIBLE:View.GONE,default=gone}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_30"
            android:visibility="@{hasContent?View.GONE:View.VISIBLE,default=visible}">
            <ImageView
                android:id="@+id/iv_default_machine_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/default_machine_icon"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginTop="@dimen/dp_600"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_22"
                android:text="@string/tv_fence_not_data_content"
                />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
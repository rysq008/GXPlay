<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="hasContent"
            type="java.lang.Boolean" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dl_fence"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <include layout="@layout/toolbar_app_compat" />

            <com.amap.api.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_128" />


            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_162"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="end|bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape_add_or_remove"
                    android:onClick="onMapZoomIn">
                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@drawable/ic_add_blue"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_add_or_remove"
                    android:onClick="onMapZoomOut">
                    <ImageView
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_44"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:src="@drawable/ic_remove_blue"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_51"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dp_158"
                android:background="@drawable/shape_monitor_doubleleft_bg"
                android:onClick="doubleLeft"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_doubleleft"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>



        </FrameLayout>

        <include
            android:id="@+id/layout_fence_select_fence_view"
            layout="@layout/layout_fence_select_fence_view"
            bind:hasContent="@{hasContent}"
            android:layout_width="@dimen/dp_435"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_158"
            android:layout_marginBottom="@dimen/dp_220"
            android:layout_gravity="end"
            />


    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
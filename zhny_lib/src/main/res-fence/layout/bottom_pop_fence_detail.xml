<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="hasContent"
            type="java.lang.Integer" />
        <variable
            name="fence"
            type="com.zhny.library.presenter.fence.model.dto.Fence" />
        <variable
            name="onFenceDetailPopWinClick"
            type="com.zhny.library.presenter.fence.custom.FenceDetailPopWin.OnFenceDetailPopWinListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_620"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/v_bottom_pop_fence_detail_top"
            android:layout_marginEnd="@dimen/dp_30"
            android:onClick="@{()->onFenceDetailPopWinClick.onFenceDetailPopWinEdit(fence)}"
            >
            <ImageView
                android:layout_width="@dimen/dp_29"
                android:layout_height="@dimen/dp_22"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_edit"
                tools:ignore="ContentDescription"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pop_fence_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/v_bottom_pop_fence_detail_top"
            android:textColor="#009688"
            android:textSize="@dimen/sp_32"
            app:textStrNotNull="@{fence.name}"
            tools:text="围栏测试标题"
            />


        <View
            android:id="@+id/v_bottom_pop_fence_detail_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_106"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FFF4F4F4"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_fence_detail_top"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_pop_fence_detail_bottom"
            android:visibility="@{hasContent==-1?View.VISIBLE:View.GONE,default=gone}"
            >
            <ProgressBar
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_fence_detail_top"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_pop_fence_detail_bottom"
            android:visibility="@{hasContent==0?View.VISIBLE:View.GONE,default=gone}"
            tools:visibility="visible"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/default_machine_icon"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_pop_fence_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_fence_detail_top"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_pop_fence_detail_bottom"
            android:orientation="vertical"
            android:visibility="@{hasContent==1?View.VISIBLE:View.GONE,default=visible}"
            tools:listitem="@layout/layout_item_pop_win_fence_detail"
            tools:visibility="gone"
            />


        <View
            android:id="@+id/v_bottom_pop_fence_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_150"
            android:background="#FFF4F4F4"
            />

        <TextView
            android:layout_width="@dimen/dp_690"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_monitor_operator_bg"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_fence_detail_bottom"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/fence_add_machine"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_32"
            android:onClick="@{()->onFenceDetailPopWinClick.onFenceDetailPopWinAdd(fence)}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="yearData"
            type="com.zhny.library.presenter.data.model.dto.DataStatisticsDto.YearData" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_29">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_30"
                android:text="@string/bottom_view_tv_total"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_yearArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_126"
                android:maxWidth="@dimen/dp_400"
                android:singleLine="true"
                android:text="@{yearData.convertYearArea,default=0}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/company_Mu"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toEndOf="@id/tv_yearArea"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/color_data_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_totalArea"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_totalArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="@string/bottom_view_tv_totalArea"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_20">


            <TextView
                android:id="@+id/tv_year_time_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_126"
                android:maxWidth="@dimen/dp_230"
                android:singleLine="true"
                android:text="@{yearData.yearTimeHour,default=0}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_company_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/company_hour"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toEndOf="@id/tv_year_time_hour"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_year_time_min"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:maxWidth="@dimen/dp_80"
                android:singleLine="true"
                android:text="@{yearData.yearTimeMin,default=0}"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toEndOf="@id/tv_company_hour"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/company_minute"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintStart_toEndOf="@id/tv_year_time_min"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_totalTime"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/color_data_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_totalTime"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_totalTime_left_point"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:background="@drawable/shape_bottom_view_total_time_point_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_totalTime"
                app:layout_constraintStart_toStartOf="@id/img_totalTime"
                app:layout_constraintTop_toTopOf="@id/img_totalTime" />

            <ImageView
                android:id="@+id/img_totalTime_right_point"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:background="@drawable/shape_bottom_view_total_time_point_bg"
                app:layout_constraintBottom_toBottomOf="@id/img_totalTime"
                app:layout_constraintEnd_toEndOf="@id/img_totalTime"
                app:layout_constraintTop_toTopOf="@id/img_totalTime" />

            <TextView
                android:id="@+id/tv_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_30"
                android:text="@string/bottom_view_tv_totalTime"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_22"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <import type="android.view.View"/>
        <variable
            name="isSelected"
            type="java.lang.Boolean" />
        <variable
            name="quickMenu"
            type="java.lang.Integer" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_seven_day"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_80"
                android:gravity="center"
                android:background="@{quickMenu==1?@drawable/shape_monitor_operator_bg:@drawable/shape_monitor_operator_bg_no,default=@drawable/shape_monitor_operator_bg}"
                android:clickable="@{isSelected,default=true}"
                android:text="@string/tv_seven_day"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32" />

            <TextView
                android:id="@+id/tv_year_day"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_80"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_60"
                android:layout_marginEnd="@dimen/dp_60"
                android:background="@{quickMenu==2?@drawable/shape_monitor_operator_bg:@drawable/shape_monitor_operator_bg_no,default=@drawable/shape_monitor_operator_bg}"
                android:clickable="@{isSelected,default=true}"
                android:text="@string/tv_year_day"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32" />

            <TextView
                android:id="@+id/tv_all_day"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_80"
                android:gravity="center"
                android:background="@{quickMenu==3?@drawable/shape_monitor_operator_bg:@drawable/shape_monitor_operator_bg_no,default=@drawable/shape_monitor_operator_bg}"
                android:clickable="@{isSelected,default=true}"
                android:text="@string/tv_all_day"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_32" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/border"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_97">

            <TextView
                android:id="@+id/tv_calendar_range_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_37"
                android:textColor="@color/color_009688"
                android:textSize="@dimen/sp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020年02月"/>

            <RelativeLayout
                android:id="@+id/rl_calendar_range_left"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_200"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_left_green"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_calendar_range_right"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_right_green"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_calendar_range_img_close"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/dp_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_close"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <View
                android:id="@+id/border"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.haibin.calendarview.CalendarView
            android:id="@+id/cv_calendar_range"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@color/white"
            app:week_background="@color/white"
            app:week_text_color="@color/black"
            app:week_view="com.zhny.library.presenter.data.custom.CustomRangeWeekView"
            app:week_text_size="@dimen/sp_22"
            app:current_month_lunar_text_color="@color/black"
            app:current_month_text_color="@color/black"
            app:day_text_size="@dimen/sp_24"
            app:lunar_text_size="@dimen/sp_20"
            app:max_select_range="-1"
            app:min_select_range="1"
            app:min_year="2004"
            app:month_view="com.zhny.library.presenter.data.custom.CustomRangeMonthView"
            app:month_view_show_mode="mode_only_current"
            app:other_month_lunar_text_color="@color/color_888888"
            app:other_month_text_color="@color/color_888888"
            app:select_mode="range_mode"
            app:selected_lunar_text_color="@color/white"
            app:selected_text_color="@color/white"
            app:selected_theme_color="@color/color_009688"
            />


        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="@dimen/dp_690"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:background="@{isSelected?@drawable/shape_monitor_operator_bg:@drawable/shape_monitor_operator_bg_no,default=@drawable/shape_monitor_operator_bg}"
            android:clickable="@{isSelected,default=true}"
            android:text="@string/fence_ok"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_32" />

    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F4F4F4"
        >

        <include layout="@layout/toolbar_app_compat"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_97"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_data_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="#FF009688"
                android:textSize="@dimen/sp_32"
                tools:text="2020年01月"
                />

            <RelativeLayout
                android:layout_width="@dimen/dp_105"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="prePage">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_left_green"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/dp_105"
                android:layout_height="match_parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="nextPage">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_right_green"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



        <com.haibin.calendarview.CalendarLayout
            android:id="@+id/data_calendar_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_30"
            app:calendar_content_view_id="@+id/rl_data_detail">

            <com.haibin.calendarview.CalendarView
                android:id="@+id/data_detail_calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:calendar_height="53dp"
                android:background="#FFFFFF"
                app:week_view="com.zhny.library.presenter.data.custom.detail.ColorfulWeekView"
                app:month_view="com.zhny.library.presenter.data.custom.detail.ColorfulMonthView"
                app:year_view="com.zhny.library.presenter.data.custom.detail.CustomYearView"
                app:calendar_padding="@dimen/dp_10"
                app:current_month_lunar_text_color="@color/black"
                app:current_month_text_color="#333333"
                app:min_year="2004"
                app:select_mode="single_mode"
                app:month_view_show_mode="mode_only_current"
                app:other_month_text_color="#999999"
                app:other_month_lunar_text_color="#999999"
                app:scheme_lunar_text_color="#ffffff"
                app:scheme_text="假"
                app:current_day_text_color="@color/black"
                app:current_day_lunar_text_color="@color/black"
                app:selected_lunar_text_color="#FFFFFF"
                app:selected_text_color="#FFFFFF"
                app:selected_theme_color="#FF009688"
                app:scheme_text_color="#fff"
                app:scheme_theme_color="#FF009688"
                app:day_text_size="@dimen/sp_24"
                app:lunar_text_size="@dimen/sp_22"
                app:week_background="#FFFFFF"
                app:week_text_color="#666666"
                app:week_text_size="@dimen/sp_22"
                app:year_view_week_text_color="#CCCCCC"
                app:year_view_day_text_color="@color/black"
                app:year_view_select_text_color="@color/white"
                app:year_view_current_day_text_color="#FF009688"
                app:year_view_day_text_size="@dimen/sp_19"
                app:year_view_month_text_color="#FF009688"
                app:year_view_month_text_size="@dimen/sp_36"
                app:year_view_scheme_color="#666666"
                />

            <com.zhny.library.presenter.data.custom.group.GroupRecyclerView
                android:id="@+id/rl_data_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_data_device_detail"
                android:background="@color/color_F4F4F4"
                app:group_background="#FFFFFF"
                app:group_center="false"
                app:group_has_header="false"
                app:group_height="42dp"
                android:padding="@dimen/dp_30"
                />


        </com.haibin.calendarview.CalendarLayout>




    </LinearLayout>

</layout>
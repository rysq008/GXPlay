<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="onDataDeviceAddViewListener"
            type="com.zhny.library.presenter.data.listener.OnDataDeviceAddViewListener" />
        <variable
            name="hasContent"
            type="java.lang.Boolean" />
        <variable
            name="showOk"
            type="java.lang.Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_900"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_pop_data_machine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/v_bottom_pop_data_machine_top"
            android:textColor="#009688"
            android:textSize="@dimen/sp_36"
            android:text="@string/fence_add_machine_list"
            />

        <ImageView
            android:id="@+id/iv_data_machine_close"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/v_bottom_pop_data_machine_top"
            android:layout_marginEnd="@dimen/dp_30"
            android:src="@drawable/icon_close"
            android:onClick="@{()->onDataDeviceAddViewListener.onViewCloseListener()}"
            tools:ignore="ContentDescription"
            />


        <View
            android:id="@+id/v_bottom_pop_data_machine_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_106"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FFF4F4F4"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_650"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_data_machine_top"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_pop_data_machine_bottom"
            android:visibility="@{hasContent?View.GONE:View.VISIBLE,default=gone}"
            tools:visibility="visible"
            >
            <ProgressBar
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottom_pop_fence_add_machine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_650"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_data_machine_top"
            app:layout_constraintBottom_toTopOf="@+id/v_bottom_pop_data_machine_bottom"
            android:orientation="vertical"
            android:visibility="@{hasContent?View.VISIBLE:View.GONE,default=visible}"
            tools:listitem="@layout/item_data_device_content"
            />


        <View
            android:id="@+id/v_bottom_pop_data_machine_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_30"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_150"
            android:background="#FFF4F4F4"
            />

        <TextView
            android:layout_width="@dimen/dp_690"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:background="@{showOk?@drawable/shape_monitor_operator_bg:@drawable/shape_monitor_operator_bg_no,default=@drawable/shape_monitor_operator_bg_no}"
            android:clickable="@{showOk}"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_bottom_pop_data_machine_bottom"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/fence_ok"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_32"
            android:onClick="@{()->onDataDeviceAddViewListener.onAddMachineListener()}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>